{
  ExpressionFilter filter=new ExpressionFilter("payload");
  filter.setMuleContext(muleContext);
  filter.setNullReturnsTrue(true);
  assertTrue(filter.accept(MuleMessage.builder().payload("true").build()));
  assertTrue(filter.accept(MuleMessage.builder().payload("TRUE").build()));
  assertTrue(filter.accept(MuleMessage.builder().payload("tRuE").build()));
}
