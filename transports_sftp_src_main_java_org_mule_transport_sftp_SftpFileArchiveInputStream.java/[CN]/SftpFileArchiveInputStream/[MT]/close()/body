{
  if (!closed.compareAndSet(false,true)) {
    return;
  }
  if (logger.isDebugEnabled()) {
    logger.debug("Closing the stream for the file " + file);
  }
  super.close();
  remoteStream.close();
  if (postProcessOnClose) {
    try {
      postProcess();
    }
 catch (    Exception e) {
      throw new MuleRuntimeException(e);
    }
  }
}
