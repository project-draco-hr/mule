{
  if (message == null) {
    message=new NullPayload();
  }
  if (messageAdapter != null) {
    try {
      return (UMOMessageAdapter)ClassUtils.instanciateClass(clazz,new Object[]{message});
    }
 catch (    Exception e) {
      throw new TransportServiceException(new Message(Messages.FAILED_TO_CREATE_X_WITH_X,"Message Adapter",clazz),e);
    }
  }
 else {
    throw new TransportServiceException(new Message(Messages.X_NOT_SET_IN_SERVICE_X,"Message Adapter",getService()));
  }
}
