{
  if (streamMessageAdapter == null) {
    throw new TransportServiceException(CoreMessages.objectNotSetInService(MuleProperties.CONNECTOR_STREAM_MESSAGE_ADAPTER,service));
  }
  try {
    if (out == null) {
      return (UMOStreamMessageAdapter)ClassUtils.instanciateClass(streamMessageAdapter,new Object[]{in});
    }
 else {
      return (UMOStreamMessageAdapter)ClassUtils.instanciateClass(streamMessageAdapter,new Object[]{in,out});
    }
  }
 catch (  Exception e) {
    throw new TransportServiceException(CoreMessages.failedToCreateObjectWith("Message Adapter",streamMessageAdapter),e);
  }
}
