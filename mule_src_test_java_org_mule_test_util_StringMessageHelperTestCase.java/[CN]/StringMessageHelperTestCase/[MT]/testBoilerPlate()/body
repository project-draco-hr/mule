{
  List msgs=new ArrayList();
  msgs.add("This");
  msgs.add("is a");
  msgs.add("Boiler Plate");
  String plate=StringMessageHelper.getBoilerPlate(msgs,'*',12);
  assertEquals((char)Character.LINE_SEPARATOR + "************" + (char)Character.LINE_SEPARATOR+ "* This     *"+ (char)Character.LINE_SEPARATOR+ "* is a     *"+ (char)Character.LINE_SEPARATOR+ "* Boiler   *"+ (char)Character.LINE_SEPARATOR+ "* Plate    *"+ (char)Character.LINE_SEPARATOR+ "************",plate);
}
