{
  MuleClient client=new MuleClient(muleContext);
  try {
    client.send("cxf:" + ((InboundEndpoint)client.getMuleContext().getRegistry().lookupObject("cxfExceptionStrategyInbound")).getAddress() + "?method=testFault","TEST",null);
    fail("Exception expected");
  }
 catch (  DispatchException e) {
    assertTrue(e.getCause() instanceof Fault);
    assertTrue(e.getCause().getMessage().contains("Invalid data argument"));
  }
}
