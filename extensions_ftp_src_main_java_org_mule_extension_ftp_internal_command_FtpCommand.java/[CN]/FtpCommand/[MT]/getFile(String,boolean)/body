{
  Path path=resolvePath(filePath);
  FTPFile ftpFile;
  try {
    ftpFile=client.mlistFile(filePath);
  }
 catch (  Exception e) {
    throw exception("Found exception trying to obtain path " + path,e);
  }
  if (ftpFile != null) {
    return new FtpFileAttributes(path,ftpFile);
  }
 else {
    if (requireExistence) {
      throw pathNotFoundException(path);
    }
 else {
      return null;
    }
  }
}
