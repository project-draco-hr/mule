{
  log.debug("Receiving message...");
  MuleClient client=new MuleClient();
  Object message=null;
  try {
    if (transformers != null) {
      message=client.receive(endpointUri,transformers,10000).getPayload();
    }
 else {
      message=client.receive(endpointUri,10000).getPayload();
    }
  }
  finally {
    client.dispose();
  }
  return message;
}
