{
  InternalMessage request=InternalMessage.builder().payload(ECHO_REQUEST).build();
  MuleClient client=muleContext.getClient();
  InternalMessage response=client.send("http://localhost:" + dynamicPort.getNumber() + "/inMidFlow",request,newOptions().method(POST.name()).disableStatusCodeValidation().build()).getRight();
  assertThat(getPayloadAsString(response),equalTo(TEST_MESSAGE));
}
