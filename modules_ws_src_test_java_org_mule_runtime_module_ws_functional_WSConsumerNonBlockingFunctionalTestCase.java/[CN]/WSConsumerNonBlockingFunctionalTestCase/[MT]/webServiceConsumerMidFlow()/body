{
  MuleMessage request=MuleMessage.builder().payload(ECHO_REQUEST).build();
  MuleClient client=muleContext.getClient();
  MuleMessage response=client.send("http://localhost:" + dynamicPort.getNumber() + "/inMidFlow",request,newOptions().method(POST.name()).disableStatusCodeValidation().build());
  assertThat(getPayloadAsString(response),equalTo(TEST_MESSAGE));
}
