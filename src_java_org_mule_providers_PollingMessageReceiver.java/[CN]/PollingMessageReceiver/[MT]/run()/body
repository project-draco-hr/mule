{
  try {
    Thread.sleep(STARTUP_DELAY);
    while (true) {
      stopped.whenFalse(null);
      connected.whenTrue(null);
      try {
        poll();
      }
 catch (      InterruptedException e) {
        return;
      }
catch (      Exception e) {
        handleException(e);
      }
      Thread.sleep(frequency);
    }
  }
 catch (  InterruptedException e) {
  }
}
