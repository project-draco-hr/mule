{
  Object value=null;
  for (  PropertyScope scope : SCOPE_ORDER) {
    if (PropertyScope.SESSION.equals(scope)) {
      if (RequestContext.getEvent() != null) {
        value=RequestContext.getEvent().getSession().getProperty(key);
      }
    }
 else {
      value=scopedMap.get(scope).get(key);
    }
    if (value != null) {
      break;
    }
  }
  return value;
}
