{
  if (scope == null) {
    return removeProperty(key);
  }
  Object value=null;
  if (PropertyScope.SESSION.equals(scope)) {
    if (RequestContext.getEvent() != null) {
      value=RequestContext.getEvent().getSession().removeProperty(key);
    }
  }
 else {
    value=getScopedProperties(scope).remove(key);
  }
  if (getProperty(key,PropertyScope.OUTBOUND) == null && getProperty(key,PropertyScope.INVOCATION) == null && getProperty(key,PropertyScope.INBOUND) == null) {
    keySet.remove(key);
  }
  return value;
}
