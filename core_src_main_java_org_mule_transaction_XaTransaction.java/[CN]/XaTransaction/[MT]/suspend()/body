{
  TransactionManager txManager=MuleServer.getMuleContext().getTransactionManager();
  if (txManager == null) {
    throw new IllegalStateException(CoreMessages.objectNotRegistered("TransactionManager","Transaction Manager").getMessage());
  }
  try {
    transaction=txManager.suspend();
  }
 catch (  SystemException e) {
    throw new TransactionException(e);
  }
  return transaction;
}
