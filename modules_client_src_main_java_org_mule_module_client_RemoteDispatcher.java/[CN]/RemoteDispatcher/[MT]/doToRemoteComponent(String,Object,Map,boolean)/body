{
  MuleMessage message=new DefaultMuleMessage(payload,messageProperties,muleContext);
  message.setBooleanProperty(MuleProperties.MULE_REMOTE_SYNC_PROPERTY,synchronous);
  setCredentials(message);
  RemoteDispatcherNotification action=new RemoteDispatcherNotification(message,RemoteDispatcherNotification.ACTION_INVOKE,"mule://" + component);
  return dispatchAction(action,synchronous,muleContext.getConfiguration().getDefaultResponseTimeout());
}
