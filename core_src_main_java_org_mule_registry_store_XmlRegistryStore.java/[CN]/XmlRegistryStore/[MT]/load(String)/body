{
  try {
    Reader r=new FileReader(storeLocation);
    AbstractRegistry reg=(AbstractRegistry)getXStream().fromXML(r);
    reg.initialize();
    reg.setStoreLocation(storeLocation);
    r.close();
    return reg;
  }
 catch (  IOException e) {
    throw new RegistryException("Could not load registry",e);
  }
}
