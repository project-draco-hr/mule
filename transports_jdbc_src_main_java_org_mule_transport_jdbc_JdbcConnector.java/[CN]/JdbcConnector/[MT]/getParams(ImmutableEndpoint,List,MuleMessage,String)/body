{
  Object[] params=new Object[paramNames.size()];
  for (int i=0; i < paramNames.size(); i++) {
    String param=(String)paramNames.get(i);
    Object value=null;
    boolean foundValue=false;
    boolean validExpression=ExpressionEvaluatorManager.isValidExpression(param);
    if (message != null && validExpression) {
      value=ExpressionEvaluatorManager.evaluate(param,message);
      foundValue=value != null;
    }
    if (!foundValue) {
      String name=param.substring(2,param.length() - 1);
      if (!validExpression) {
        logger.warn(MessageFormat.format("Config is using the legacy param format {0} (no evaluator defined)." + " This expression can be replaced with {1}header:{2}{3}",param,ExpressionEvaluatorManager.DEFAULT_EXPRESSION_PREFIX,name,ExpressionEvaluatorManager.DEFAULT_EXPRESSION_POSTFIX));
      }
      value=endpoint.getProperty(name);
    }
    params[i]=value;
  }
  return params;
}
