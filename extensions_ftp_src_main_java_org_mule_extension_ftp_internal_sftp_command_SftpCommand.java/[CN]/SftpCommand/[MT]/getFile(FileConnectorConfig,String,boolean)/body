{
  Path path=resolvePath(config,filePath);
  SftpFileAttributes attributes;
  try {
    attributes=client.getAttributes(path);
  }
 catch (  Exception e) {
    throw exception("Found exception trying to obtain path " + path,e);
  }
  if (attributes != null) {
    return attributes;
  }
 else {
    if (requireExistence) {
      throw pathNotFoundException(path);
    }
 else {
      return null;
    }
  }
}
