{
  ServiceStatistics stats=service.getStatistics();
  if (stats.isEnabled()) {
    if (!(service.getOutboundMessageProcessor() instanceof OutboundRouterCollection) || (service.getOutboundMessageProcessor() instanceof OutboundRouterCollection && ((OutboundRouterCollection)service.getOutboundMessageProcessor()).hasEndpoints())) {
      if (event.getExchangePattern().hasResponse()) {
        stats.incSentEventSync();
      }
 else {
        stats.incSentEventASync();
      }
    }
  }
  return event;
}
