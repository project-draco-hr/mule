{
  Evaluator evaluator=annotation.annotationType().getAnnotation(Evaluator.class);
  if (evaluator != null) {
    ExpressionArgument arg=new ExpressionArgument(null,new ExpressionConfig(((Groovy)annotation).value(),evaluator.value(),null),((Groovy)annotation).required(),parameterType);
    return arg;
  }
 else {
    throw new IllegalArgumentException("The @Evaluator annotation must be set on an Expression Annotation");
  }
}
