{
  Object xpathResult;
  boolean accept=false;
  try {
    xpathResult=getXpath().evaluate(pattern,node,XPathConstants.STRING);
  }
 catch (  Exception e) {
    logger.warn("StandardXPathFilter filter rejected message because of an error while evaluating the expression: " + e.getMessage(),e);
    return false;
  }
  if (logger.isDebugEnabled()) {
    logger.debug("StandardXPathFilter Expression result = '" + xpathResult + "' -  Expected value = '"+ expectedValue+ "'");
  }
  if (xpathResult != null && !"".equals(xpathResult)) {
    accept=xpathResult.toString().equals(expectedValue);
  }
 else {
    if (expectedValue.equals("null")) {
      accept=true;
    }
 else {
      if (logger.isDebugEnabled()) {
        logger.debug("StandardXPathFilter expression evaluates to null: " + pattern);
      }
    }
  }
  if (logger.isDebugEnabled()) {
    logger.debug("StandardXPathFilter accept object  : " + accept);
  }
  return accept;
}
