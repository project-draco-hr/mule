{
  Map props=MapUtils.mapWithKeysAndValues(HashMap.class,new Object[]{"foo","foozle"},new Object[]{"bar","doozle"});
  assertEquals("{foo=bar, foozle=doozle}",MapUtils.toString(props,false));
  assertEquals("{" + SystemUtils.LINE_SEPARATOR + "foo=bar"+ SystemUtils.LINE_SEPARATOR+ "foozle=doozle"+ SystemUtils.LINE_SEPARATOR+ "}",MapUtils.toString(props,true));
}
