{
  if (scriptText != null) {
    try {
      compiledScript=compilable.compile(scriptText);
    }
 catch (    ScriptException e) {
      throw new InitialisationException(e,this);
    }
  }
 else   if (scriptFile != null) {
    InputStream is=null;
    try {
      is=Utility.loadResource(scriptFile,getClass());
    }
 catch (    IOException e) {
      throw new InitialisationException(new Message(Messages.CANT_LOAD_X_FROM_CLASSPATH_FILE,scriptFile),e,this);
    }
    try {
      compiledScript=compilable.compile(new InputStreamReader(is));
    }
 catch (    ScriptException e) {
      throw new InitialisationException(e,this);
    }
  }
}
