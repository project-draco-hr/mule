{
  if (message instanceof InputStream) {
    return IOUtils.toByteArray((InputStream)message);
  }
 else   if (message instanceof Serializable) {
    return SerializationUtils.serialize((Serializable)message);
  }
 else {
    throw new NotSerializableException("Don't know how to serialize payload of type " + message.getClass().getName());
  }
}
