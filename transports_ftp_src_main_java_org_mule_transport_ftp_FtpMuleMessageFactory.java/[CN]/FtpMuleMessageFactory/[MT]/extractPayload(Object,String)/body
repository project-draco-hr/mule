{
  FTPFile file=(FTPFile)transportMessage;
  if (streaming) {
    InputStream stream=ftpClient.retrieveFileStream(file.getName());
    if (stream == null) {
      throw new IOException(MessageFormat.format("Failed to retrieve file {0}. Ftp error: {1}",file.getName(),ftpClient.getReplyCode()));
    }
    return stream;
  }
 else {
    ByteArrayOutputStream baos=new ByteArrayOutputStream();
    if (!ftpClient.retrieveFile(file.getName(),baos)) {
      throw new IOException(MessageFormat.format("Failed to retrieve file {0}. Ftp error: {1}",file.getName(),ftpClient.getReplyCode()));
    }
    return baos.toByteArray();
  }
}
