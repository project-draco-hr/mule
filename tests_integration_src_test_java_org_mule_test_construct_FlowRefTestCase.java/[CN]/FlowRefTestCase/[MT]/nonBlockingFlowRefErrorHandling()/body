{
  Response response=Request.Post(String.format("http://localhost:%s/%s",port.getNumber(),"nonBlockingFlowRefErrorHandling")).connectTimeout(RECEIVE_TIMEOUT).bodyString(TEST_MESSAGE,ContentType.TEXT_PLAIN).execute();
  HttpResponse httpResponse=response.returnResponse();
  assertThat(httpResponse.getStatusLine().getStatusCode(),is(200));
  assertThat(IOUtils.toString(httpResponse.getEntity().getContent()),is(ERROR_MESSAGE));
}
