{
  if (transactionConfig != null && transactionConfig.getAction() != TransactionConfig.ACTION_INDIFFERENT) {
    transactionInterceptorChain=transactionTemplate.new ExternalTransactionInterceptor(transactionTemplate.new ValidateTransactionalStateInterceptor(transactionTemplate.new SuspendXaTransactionInterceptor(transactionTemplate.new ResolveTransactionInterceptor(transactionTemplate.new BeginTransactionInterceptor(transactionInterceptorChain)))));
  }
  return transactionInterceptorChain;
}
