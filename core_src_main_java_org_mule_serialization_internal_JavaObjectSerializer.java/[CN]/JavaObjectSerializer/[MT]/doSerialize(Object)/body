{
  if (object != null && !(object instanceof Serializable)) {
    throw new SerializationException(String.format("Was expecting a Serializable type. %s was found instead",object.getClass().getCanonicalName()));
  }
  if (object != null && !(object instanceof Serializable)) {
    throw new SerializationException(String.format("Was expecting a Serializable type. %s was found instead",object.getClass().getName()));
  }
  return SerializationUtils.serialize((Serializable)object);
}
