{
  boolean response=result != null && result.getMessage().getPayload() != null && !isOneway(m.getExchange());
  if (response) {
    InputStream is=(InputStream)configuration.getMuleContext().getTransformationService().transform(result.getMessage(),DataType.INPUT_STREAM).getPayload();
    PushbackInputStream pb=new PushbackInputStream(is);
    result=MuleEvent.builder(result).message(MuleMessage.builder(result.getMessage()).payload(pb).mediaType(XML).build()).build();
    int b=pb.read();
    if (b != -1) {
      pb.unread(b);
      return pb;
    }
  }
  m.getExchange().put(CxfConstants.MULE_EVENT,result);
  return null;
}
