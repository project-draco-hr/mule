{
  boolean fallback=component instanceof Callable;
  if (method != null) {
    try {
      component.getClass().getMethod(method.getName(),method.getParameterTypes());
    }
 catch (    Exception e) {
      if (!fallback) {
        throw e;
      }
    }
  }
 else {
    if (!fallback) {
      throw new NoSuchMethodException(new Message(Messages.METHOD_X_WITH_PARAMS_X_NOT_FOUND_ON_X,methodName,"unknown",component.getClass().getName()).toString());
    }
  }
}
