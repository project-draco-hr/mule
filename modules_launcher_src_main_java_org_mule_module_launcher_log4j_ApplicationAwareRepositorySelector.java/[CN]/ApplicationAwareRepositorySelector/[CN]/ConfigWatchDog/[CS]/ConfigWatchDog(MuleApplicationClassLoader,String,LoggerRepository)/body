{
  appClassLoader.addShutdownListener(new MuleApplicationClassLoader.ShutdownListener(){
    public void execute(){
      interrupted=true;
    }
  }
);
  this.filename=filename;
  this.file=new File(filename);
  this.lastModif=file.lastModified();
  setDaemon(true);
  this.repository=repository;
  this.delay=10000;
}
