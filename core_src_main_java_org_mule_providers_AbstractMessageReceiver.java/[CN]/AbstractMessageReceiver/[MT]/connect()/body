{
  if (connected.get()) {
    return;
  }
  if (connecting.compareAndSet(false,true)) {
    if (logger.isDebugEnabled()) {
      logger.debug(this + " Attempting to connect to: " + endpoint.getEndpointURI());
    }
    connectionStrategy.connect(this);
    logger.info("Successfully connected to: " + endpoint.getEndpointURI());
    return;
  }
  try {
    doConnect();
    MuleManager.getInstance().fireNotification(new ConnectionNotification(this,getConnectEventId(),ConnectionNotification.CONNECTION_CONNECTED));
  }
 catch (  Exception e) {
    MuleManager.getInstance().fireNotification(new ConnectionNotification(this,getConnectEventId(),ConnectionNotification.CONNECTION_FAILED));
    if (e instanceof ConnectException) {
      throw (ConnectException)e;
    }
 else {
      throw new ConnectException(e,this);
    }
  }
  connected.set(true);
  connecting.set(false);
}
