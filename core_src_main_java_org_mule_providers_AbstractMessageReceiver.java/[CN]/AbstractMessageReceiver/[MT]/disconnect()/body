{
  if (logger.isDebugEnabled()) {
    logger.debug("Disconnecting from: " + endpoint.getEndpointURI());
  }
  MuleManager.getInstance().fireNotification(new ConnectionNotification(this,getConnectEventId(),ConnectionNotification.CONNECTION_DISCONNECTED));
  connected.set(false);
  doDisconnect();
  logger.info("Disconnected from: " + endpoint.getEndpointURI());
}
