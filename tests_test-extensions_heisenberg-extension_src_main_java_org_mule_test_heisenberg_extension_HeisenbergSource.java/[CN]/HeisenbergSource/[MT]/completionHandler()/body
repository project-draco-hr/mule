{
  return new BlockingCompletionHandler<MuleEvent,Exception,MuleEvent>(){
    @Override protected void doOnCompletion(    MuleEvent event){
      Long payment=(Long)((org.mule.runtime.core.api.Event)event).getMessage().getPayload().getValue();
      heisenberg.setMoney(heisenberg.getMoney().add(BigDecimal.valueOf(payment)));
    }
    @Override public void onFailure(    Exception exception){
      heisenberg.setMoney(BigDecimal.valueOf(-1));
    }
  }
;
}
