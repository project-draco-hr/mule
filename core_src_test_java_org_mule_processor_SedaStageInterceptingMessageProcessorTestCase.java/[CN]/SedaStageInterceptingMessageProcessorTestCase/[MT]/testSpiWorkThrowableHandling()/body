{
  try {
    createAsyncInterceptingMessageProcessor(getNullMessageProcessor()).handleWorkException(getTestWorkEvent(),"workRejected");
  }
 catch (  MuleRuntimeException mrex) {
    assertNotNull(mrex);
    assertTrue(mrex.getCause().getClass() == Throwable.class);
    assertEquals("testThrowable",mrex.getCause().getMessage());
  }
}
