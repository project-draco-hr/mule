{
  String payload="<soap:Envelope xmlns:soap=\"http://schemas.xmlsoap.org/soap/envelope/\">" + "<soap:Body>" + "<emp:addEmployee xmlns:emp=\"http://employee.example.mule.org/\">"+ "<emp:employee>"+ "<emp:division>ESB</emp:division>"+ "<emp:name>Pepe</emp:name>"+ "</emp:employee>"+ "</emp:addEmployee>"+ "</soap:Body>"+ "</soap:Envelope>";
  MuleClient client=muleContext.getClient();
  MuleMessage result=client.send("http://localhost:" + dynamicPort.getNumber() + "/proxyOneWayFault",getTestMuleMessage(payload),HTTP_REQUEST_OPTIONS);
  assertThat(result,is(notNullValue()));
  assertThat(result.getPayloadAsString(),containsString("ERROR"));
}
