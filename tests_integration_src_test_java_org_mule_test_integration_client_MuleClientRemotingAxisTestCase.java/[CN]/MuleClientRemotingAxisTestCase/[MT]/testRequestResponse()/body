{
  MuleClient client=new MuleClient(muleContext);
  RemoteDispatcher dispatcher=client.getRemoteDispatcher("remoteEndpoint");
  try {
    MuleMessage result=dispatcher.sendRemote("axis:http://localhost:38104/mule/services/mycomponent2?method=echo","test",null);
    assertNotNull(result);
    assertEquals("test",result.getPayloadAsString());
  }
  finally {
    client.dispose();
  }
}
