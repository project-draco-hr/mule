{
  if (logger.isDebugEnabled()) {
    logger.debug("initialising: anon " + anon);
  }
  validate(anon);
  if (!anon) {
    initKeyManagerFactory();
  }
  initTrustManagerFactory();
  if (null != namespace) {
    new TlsPropertiesMapper(namespace).writeToProperties(System.getProperties(),this);
  }
}
