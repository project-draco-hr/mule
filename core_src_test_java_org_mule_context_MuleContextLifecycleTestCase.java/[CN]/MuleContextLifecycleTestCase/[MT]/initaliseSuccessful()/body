{
  assertFalse(ctx.isInitialised());
  assertFalse(ctx.isInitialising());
  assertFalse(ctx.isStarted());
  assertFalse(ctx.isDisposed());
  assertFalse(ctx.isDisposing());
  ctx.initialise();
  assertTrue(ctx.isInitialised());
  assertFalse(ctx.isInitialising());
  assertFalse(ctx.isStarted());
  assertFalse(ctx.isDisposed());
  assertFalse(ctx.isDisposing());
}
