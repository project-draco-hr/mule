{
  if (stmt == null) {
    return stmt;
  }
  Pattern p=Pattern.compile("\\$\\{[^\\}]*\\}");
  Matcher m=p.matcher(stmt);
  StringBuffer sb=new StringBuffer();
  while (m.find()) {
    String key=m.group();
    m.appendReplacement(sb,"?");
    params.add(key);
  }
  m.appendTail(sb);
  return sb.toString();
}
