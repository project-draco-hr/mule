{
  if (firstUse) {
    firstUse=false;
    String sp=getProperty(SOURCEPATH);
    if (sp != null) {
      Map<String,Map<String,String>> map=parseHeader(sp);
      for (Iterator<String> i=map.keySet().iterator(); i.hasNext(); ) {
        String file=i.next();
        if (!isDuplicate(file)) {
          File f=getFile(file);
          if (!f.isDirectory()) {
            error("Adding a sourcepath that is not a directory: " + f);
          }
 else {
            sourcePath.add(f);
          }
        }
      }
    }
  }
  return sourcePath;
}
