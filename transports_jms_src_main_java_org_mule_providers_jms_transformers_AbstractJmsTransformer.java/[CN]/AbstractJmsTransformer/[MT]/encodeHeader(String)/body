{
  StringBuffer sb=new StringBuffer(name.length());
  for (int i=0; i < name.length(); i++) {
    char c=name.charAt(i);
    if (i == 0) {
      if (!Character.isJavaIdentifierStart(c)) {
        c=REPLACEMENT_CHAR;
      }
    }
 else {
      if (!Character.isJavaIdentifierPart(c)) {
        c=REPLACEMENT_CHAR;
      }
    }
    sb.append(c);
  }
  return sb.toString();
}
