{
  final Latch submitterIsRunning=new Latch();
  Runnable asyncRunnable=new Runnable(){
    public void run(){
synchronized (e) {
        submitterIsRunning.countDown();
        e.execute(r);
      }
    }
  }
;
  Thread t=new Thread(_asyncGroup,asyncRunnable);
  t.setDaemon(true);
  t.start();
  submitterIsRunning.await();
  return t;
}
