{
  try {
    if (Files.isDirectory(source)) {
      FileUtils.copyDirectory(source.toFile(),targetPath.toFile());
    }
 else {
      Files.copy(source,targetPath,options);
    }
  }
 catch (  Exception e) {
    throw exception(format("Found exception copying file '%s' to '%s'",source,targetPath),e);
  }
}
