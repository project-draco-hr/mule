{
  super(context);
  setDispatcherFactory(new AbstractMessageDispatcherFactory(){
    @Override public MessageDispatcher create(    OutboundEndpoint endpoint) throws MuleException {
      return new TestMessageDispatcher(endpoint);
    }
  }
);
  setRequesterFactory(new AbstractMessageRequesterFactory(){
    @Override public MessageRequester create(    InboundEndpoint endpoint) throws MuleException {
      return new TestMessageRequester(endpoint);
    }
  }
);
  setRetryPolicyTemplate((RetryPolicyTemplate)muleContext.getRegistry().lookupObject(MuleProperties.OBJECT_DEFAULT_RETRY_POLICY_TEMPLATE));
}
