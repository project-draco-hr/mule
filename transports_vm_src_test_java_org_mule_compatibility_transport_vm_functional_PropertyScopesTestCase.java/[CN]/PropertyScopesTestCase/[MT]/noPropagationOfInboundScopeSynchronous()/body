{
  MuleClient client=muleContext.getClient();
  InternalMessage message=InternalMessage.builder().payload(TEST_MESSAGE).addInboundProperty("foo","bar").build();
  InternalMessage response=client.send("vm://in-synch",message).getRight();
  assertNotNull(response);
  assertNull("Property should not have been propogated for this scope",response.getInboundProperty("foo"));
}
