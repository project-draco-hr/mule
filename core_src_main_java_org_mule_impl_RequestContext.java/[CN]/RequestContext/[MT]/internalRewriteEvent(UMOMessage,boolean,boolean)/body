{
  if (message != null) {
    UMOEvent event=getEvent();
    if (event != null) {
      UMOMessage copy=newMessage(message,safe,required);
      UMOEvent newEvent=new MuleEvent(copy,event);
      if (safe) {
        resetAccessControl(copy);
      }
      internalSetEvent(newEvent);
      return copy;
    }
  }
  return message;
}
