{
  if (socket != null && !socket.isClosed()) {
    try {
      shutdownSocket();
    }
 catch (    IOException e) {
      if (LOGGER.isWarnEnabled()) {
        LOGGER.warn("TCP Worker shutting down output stream failed",e);
      }
    }
 finally {
      try {
        socket.close();
      }
 catch (      IOException e) {
        if (LOGGER.isWarnEnabled()) {
          LOGGER.warn("TCP Worker socket close failed",e);
        }
      }
    }
  }
}
