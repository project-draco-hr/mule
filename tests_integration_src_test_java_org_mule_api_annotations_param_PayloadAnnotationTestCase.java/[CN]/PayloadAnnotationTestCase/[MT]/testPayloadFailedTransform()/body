{
  MuleClient client=muleContext.getClient();
  MuleMessage message=client.send("vm://payload3",new DefaultMuleMessage(NullPayload.getInstance(),muleContext));
  assertNotNull(message);
  assertNotNull(message.getExceptionPayload());
  assertEquals(TransformerException.class,ExceptionUtils.getRootCause(message.getExceptionPayload().getException()).getClass());
}
