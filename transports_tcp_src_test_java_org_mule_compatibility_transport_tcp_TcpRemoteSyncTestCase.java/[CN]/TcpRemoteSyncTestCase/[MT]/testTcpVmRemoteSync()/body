{
  MuleClient client=muleContext.getClient();
  Map<String,Serializable> props=new HashMap<>();
  props.put(MULE_REMOTE_SYNC_PROPERTY,Boolean.TRUE);
  InternalMessage reply=client.send(((InboundEndpoint)((Flow)muleContext.getRegistry().lookupObject("Echo2")).getMessageSource()).getAddress(),InternalMessage.builder().payload(message).inboundProperties(props).build()).getRight();
  assertNotNull(reply);
  assertNotNull(reply.getPayload().getValue());
  assertEquals("Received: " + message,getPayloadAsString(reply));
}
