{
  if (ANT_TEMPLATE_STYLE.equals(style)) {
    pattern=Pattern.compile("\\$\\{[^\\}]+\\}");
    pre=2;
    post=1;
  }
 else   if (SQUARE_TEMPLATE_STYLE.equals(style)) {
    pattern=Pattern.compile("\\[[^\\]]+\\]");
    pre=1;
    post=1;
  }
 else {
    throw new IllegalArgumentException("Unknown template style: " + style);
  }
  this.style=style;
}
