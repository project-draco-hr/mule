{
  if (isReference) {
    if (newValue instanceof String) {
      for (StringTokenizer ref=new StringTokenizer((String)newValue); ref.hasMoreTokens(); ) {
        bean.addPropertyReference(newName,ref.nextToken());
      }
    }
 else {
      throw new IllegalArgumentException("Bean reference must be a String: " + newName + "/"+ newValue);
    }
  }
 else {
    bean.addPropertyValue(newName,newValue);
  }
}
