{
  if (muleContext == null) {
    if (logger.isInfoEnabled()) {
      logger.info("MuleContext not created, nothing to dispose of");
    }
    return;
  }
  if (muleContext.isStarted() && !muleContext.isDisposed()) {
    try {
      stop();
    }
 catch (    DeploymentStopException e) {
      logger.error(e);
    }
  }
  if (logger.isInfoEnabled()) {
    logger.info(miniSplash(String.format("Disposing application '%s'",appName)));
  }
  muleContext.dispose();
  muleContext=null;
}
