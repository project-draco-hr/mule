{
  ParameterDeclarer descriptor=field.getAnnotation(Optional.class) != null ? declarer.withOptionalParameter(attributeName) : declarer.withRequiredParameter(attributeName);
  return descriptor.ofType(clazz).withExpressionSupport(ExpressionSupport.NOT_SUPPORTED).withModelProperty(new DeclaringMemberModelProperty(field)).withModelProperty(new InfrastructureParameterModelProperty());
}
