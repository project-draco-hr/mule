{
  boolean isRedeliveredPolicyConfigured=false;
  if (this.exceptionListener instanceof OnErrorPropagateHandler && ((OnErrorPropagateHandler)exceptionListener).hasMaxRedeliveryAttempts()) {
    isRedeliveredPolicyConfigured=true;
  }
 else   if (this.exceptionListener instanceof ErrorHandler) {
    ErrorHandler errorHandler=(ErrorHandler)this.exceptionListener;
    for (    MessagingExceptionHandlerAcceptor messagingExceptionHandlerAcceptor : errorHandler.getExceptionListeners()) {
      if (messagingExceptionHandlerAcceptor instanceof OnErrorPropagateHandler) {
        isRedeliveredPolicyConfigured=true;
        break;
      }
    }
  }
  return isRedeliveredPolicyConfigured;
}
