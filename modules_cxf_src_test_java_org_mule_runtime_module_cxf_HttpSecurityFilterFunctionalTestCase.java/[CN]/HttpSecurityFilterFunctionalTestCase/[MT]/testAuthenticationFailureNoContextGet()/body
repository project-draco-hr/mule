{
  HttpClient client=new HttpClient();
  client.getParams().setAuthenticationPreemptive(true);
  GetMethod get=new GetMethod("http://localhost:" + dynamicPort1.getNumber() + "/services/Echo");
  get.setDoAuthentication(false);
  try {
    int status=client.executeMethod(get);
    assertEquals(UNAUTHORIZED.getStatusCode(),status);
    String expectedMessage=String.format("Registered authentication is set to org.mule.runtime.module.http.internal.filter.HttpBasicAuthenticationFilter " + "but there was no security context on the session. Authentication denied on connector %s",get.getURI().getURI());
    assertThat(get.getResponseBodyAsString(),startsWith(expectedMessage));
  }
  finally {
    get.releaseConnection();
  }
}
