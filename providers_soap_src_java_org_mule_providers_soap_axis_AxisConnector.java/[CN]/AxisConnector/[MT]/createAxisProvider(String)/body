{
  InputStream is=null;
  File f=new File(serverConfig);
  if (f.exists()) {
    try {
      is=new FileInputStream(f);
    }
 catch (    FileNotFoundException e) {
    }
  }
 else {
    is=ClassHelper.getResourceAsStream(serverConfig,getClass());
  }
  FileProvider fileProvider=new FileProvider(serverConfig);
  if (is != null) {
    fileProvider.setInputStream(is);
  }
 else {
    throw new InitialisationException("Unable ot find/load axis configuration: " + serverConfig);
  }
  return new MuleConfigProvider(fileProvider);
}
