{
  UMOEndpoint ep=managementContext.getRegistry().getOrCreateEndpointForUri(new MuleEndpointURI(uri),(inbound ? UMOEndpoint.ENDPOINT_TYPE_RECEIVER : UMOEndpoint.ENDPOINT_TYPE_SENDER));
  ep.setName(name);
  if (transformers != null) {
    String delim=(transformers.indexOf(",") > -1 ? "," : " ");
    ep.setTransformer(MuleObjectHelper.getTransformer(transformers,delim));
  }
  ep.setFilter(filter);
  return ep;
}
