{
  if (provides != null) {
    if (!servicefactory)     pw.println("  <service>");
 else     pw.println("  <service servicefactory='true'>");
    StringTokenizer st=new StringTokenizer(provides,",");
    while (st.hasMoreTokens()) {
      String interfaceName=st.nextToken();
      pw.println("    <provide interface='" + interfaceName + "'/>");
      if (!checkClass(interfaceName))       error("Component definition provides a class that is neither imported nor contained: " + interfaceName);
    }
    pw.println("  </service>");
  }
}
