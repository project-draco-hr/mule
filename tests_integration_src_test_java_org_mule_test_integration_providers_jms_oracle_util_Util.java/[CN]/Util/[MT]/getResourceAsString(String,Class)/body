{
  InputStream is=ClassHelper.getResourceAsStream(resource,callingClass);
  if (is == null) {
    File file=new File(resource);
    if (file.exists()) {
      is=new FileInputStream(file);
    }
 else {
      URL url=new URL(resource);
      is=url.openStream();
    }
  }
  return getInputStreamAsString(is);
}
