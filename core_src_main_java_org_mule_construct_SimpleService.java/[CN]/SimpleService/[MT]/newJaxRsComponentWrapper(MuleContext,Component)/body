{
  try {
    Component jrc=(Component)ClassUtils.instanciateClass("org.mule.module.jersey.JerseyResourcesComponent");
    Method setComponentsMethod=ClassUtils.getMethod(jrc.getClass(),"setComponents",new Class<?>[]{List.class});
    setComponentsMethod.invoke(jrc,Collections.singletonList(component));
    ((MuleContextAware)jrc).setMuleContext(muleContext);
    return jrc;
  }
 catch (  Exception e) {
    throw new MuleRuntimeException(MessageFactory.createStaticMessage("Failed to configure the required web service infrastructure: are you missing the Mule Jersey Module?"),e);
  }
}
