{
  super.validateConstruct();
  if (!(messageSource instanceof InboundEndpoint)) {
    throw new FlowConstructInvalidException(MessageFactory.createStaticMessage("SimpleService only works with a single inbound endpoint."));
  }
  if (!((InboundEndpoint)messageSource).getExchangePattern().equals(MessageExchangePattern.REQUEST_RESPONSE)) {
    throw new FlowConstructInvalidException(MessageFactory.createStaticMessage("SimpleService only works with a request-response inbound endpoint."));
  }
}
