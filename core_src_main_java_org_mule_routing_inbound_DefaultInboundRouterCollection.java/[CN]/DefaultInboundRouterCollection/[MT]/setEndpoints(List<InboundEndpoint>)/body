{
  if (endpoints != null) {
    for (    InboundEndpoint endpoint : endpoints) {
      removeEndpoint(endpoint);
    }
    this.endpoints.clear();
    for (    InboundEndpoint endpoint : endpointList) {
      addEndpoint(endpoint);
    }
  }
 else {
    throw new IllegalArgumentException("List of endpoints = null");
  }
}
