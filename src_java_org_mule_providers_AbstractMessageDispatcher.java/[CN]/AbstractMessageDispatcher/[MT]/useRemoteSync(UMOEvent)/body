{
  boolean remoteSync=false;
  UMOMessage msg=event.getMessage();
  if (event.getEndpoint().getConnector().isRemoteSyncEnabled()) {
    remoteSync=event.getEndpoint().isRemoteSync() || msg.getBooleanProperty(MuleProperties.MULE_REMOTE_SYNC_PROPERTY,false);
    if (remoteSync) {
      if (event.getComponent() != null) {
        remoteSync=event.getComponent().getDescriptor().getResponseRouter() == null;
      }
    }
  }
  if (!remoteSync) {
    msg.removeProperty(MuleProperties.MULE_REMOTE_SYNC_PROPERTY);
  }
  return remoteSync;
}
