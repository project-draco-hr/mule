{
  try {
    ClassUtils.instanciateClass(DERBY_DRIVER_CLASS);
    DriverManager.getConnection("jdbc:derby:;shutdown=true");
  }
 catch (  SQLException sqlex) {
    if (!"XJ015".equals(sqlex.getSQLState())) {
      throw sqlex;
    }
  }
catch (  Exception ex) {
    throw new RuntimeException(ex);
  }
}
