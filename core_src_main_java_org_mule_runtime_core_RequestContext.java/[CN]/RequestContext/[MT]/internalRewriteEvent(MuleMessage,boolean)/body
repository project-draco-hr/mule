{
  if (message != null) {
    MuleEvent event=getEvent();
    if (event != null) {
      MuleMessage copy=newMessage(message,safe);
      MuleEvent newEvent=new DefaultMuleEvent(copy,event);
      if (safe) {
        resetAccessControl(copy);
      }
      internalSetEvent(newEvent);
      return copy;
    }
  }
  return message;
}
