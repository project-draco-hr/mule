{
  InputStream in=null;
  try {
    ObjectMapper mapper=new ObjectMapper();
    in=getObjectAsStream(src);
    return mapper.readValue(in,type);
  }
 catch (  IOException e) {
    throw new DefaultMuleException(CoreMessages.failedToReadPayload(),e);
  }
 finally {
    IOUtils.closeQuietly(in);
  }
}
