{
  if (replyToHandler != null && replyToHandler instanceof NonBlockingReplyToHandler) {
    replyToHandler=createNonBlockingReplyToHandler(event,replyToHandler);
  }
 else {
    replyToHandler=null;
  }
  event=MuleEvent.builder(event).flow(this).replyToHandler(replyToHandler).replyToDestination(replyToDestination).synchronous(event.isSynchronous() || isSynchronous()).build();
  resetRequestContextEvent(event);
  return event;
}
