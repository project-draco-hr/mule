{
  try {
    dispatchToSocket(event);
    if (returnResponse(event)) {
      try {
        Object result=receiveFromSocket(socket,event.getTimeout(),endpoint);
        if (result == null) {
          return new DefaultMuleMessage(NullPayload.getInstance(),this.getConnector().getMuleContext());
        }
        if (result instanceof MuleMessage) {
          return (MuleMessage)result;
        }
        return new DefaultMuleMessage(result,this.getConnector().getMuleContext());
      }
 catch (      Exception ex) {
        if (logger.isInfoEnabled()) {
          logger.info("Error occurred while Reading; Message: " + ex.getMessage(),ex);
        }
        closeSocket();
        throw ex;
      }
    }
 else {
      return event.getMessage();
    }
  }
  finally {
    if (!this.getConnector().isKeepSendSocketOpen()) {
      closeSocket();
    }
  }
}
