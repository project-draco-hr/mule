{
  if (service != null && service.getLifecycleManager() != null && service.getLifecycleManager().getState().isInitialised()) {
    return;
  }
  if (logger.isInfoEnabled()) {
    logger.info("Initialising: " + this);
  }
  if (service == null) {
    throw new InitialisationException(MessageFactory.createStaticMessage("Component has not been initialized properly, no service."),this);
  }
  doInitialise();
}
