{
  if (candidate instanceof Boolean || candidate instanceof Byte || candidate instanceof Short|| candidate instanceof Character|| candidate instanceof Integer|| candidate instanceof Long|| candidate instanceof Float|| candidate instanceof Double|| candidate instanceof String|| candidate instanceof byte[]) {
    return;
  }
  throw new MessageFormatException(String.format("Invalid type passed to StreamMessage: %s . Allowed types are: " + "Boolean, Byte, Short, Character, Integer, Long, Float, Double," + "String and byte[]",ClassUtils.getShortClassName(candidate,"null")));
}
