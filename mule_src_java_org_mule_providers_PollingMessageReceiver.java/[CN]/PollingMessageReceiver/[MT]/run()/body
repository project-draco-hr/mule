{
  try {
    Thread.sleep(STARTUP_DELAY);
    while (!stopped.get()) {
      if (connected.get()) {
        try {
          poll();
        }
 catch (        InterruptedException e) {
          return;
        }
catch (        Exception e) {
          handleException(e);
        }
      }
      Thread.sleep(frequency);
    }
  }
 catch (  InterruptedException e) {
  }
}
