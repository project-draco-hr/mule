{
  for (int i=0; i < ports.size(); i++) {
    if (isPortFree(ports.get(i))) {
      logger.info(prefix + " port is free : " + ports.get(i));
    }
 else {
      logger.info(prefix + " port is not free : " + ports.get(i));
      if (failIfTaken) {
        fail("failing test since port is not free : " + ports.get(i));
      }
    }
  }
}
