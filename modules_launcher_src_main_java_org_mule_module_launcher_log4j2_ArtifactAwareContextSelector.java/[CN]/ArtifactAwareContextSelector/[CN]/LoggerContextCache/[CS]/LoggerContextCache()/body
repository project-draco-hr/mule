{
  contexts=CacheBuilder.newBuilder().removalListener(new RemovalListener<Integer,LoggerContext>(){
    @Override public void onRemoval(    RemovalNotification<Integer,LoggerContext> notification){
      LoggerContext context=notification.getValue();
      if (context != null && !context.isStopping() && !context.isStopped()) {
        context.stop();
      }
    }
  }
).build();
}
