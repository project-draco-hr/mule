{
  MuleException muleException=ExceptionHelper.getRootMuleException(e);
  if (muleException == null) {
    return new RetryPolicyExhaustedException(CoreMessages.createStaticMessage(UNTIL_SUCCESSFUL_MSG_PREFIX,e.getMessage()),e,this);
  }
 else {
    if (muleException.getCause() != null) {
      RetryPolicyExhaustedException retryPolicyExhaustedException=new RetryPolicyExhaustedException(CoreMessages.createStaticMessage(UNTIL_SUCCESSFUL_MSG_PREFIX,muleException.getMessage()),muleException.getCause());
      retryPolicyExhaustedException.getInfo().putAll(muleException.getInfo());
      return retryPolicyExhaustedException;
    }
 else {
      RetryPolicyExhaustedException retryPolicyExhaustedException=new RetryPolicyExhaustedException(CoreMessages.createStaticMessage(UNTIL_SUCCESSFUL_MSG_PREFIX,muleException.getMessage()),muleException);
      retryPolicyExhaustedException.getInfo().putAll(muleException.getInfo());
      return retryPolicyExhaustedException;
    }
  }
}
