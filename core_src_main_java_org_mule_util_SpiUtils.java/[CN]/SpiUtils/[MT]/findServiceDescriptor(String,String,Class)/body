{
  if (path.startsWith("/")) {
    path=path.substring(1);
  }
  if (!path.endsWith("/")) {
    path+="/";
  }
  if (path.startsWith(SERVICE_ROOT)) {
    path+=name;
  }
 else {
    path=SERVICE_ROOT + path + name;
  }
  try {
    return IOUtils.getResourceAsStream(path,currentClass,false,false);
  }
 catch (  IOException e) {
    return null;
  }
}
