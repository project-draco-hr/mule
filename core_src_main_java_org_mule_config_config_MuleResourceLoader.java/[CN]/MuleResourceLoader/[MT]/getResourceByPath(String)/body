{
  InputStream is=null;
  try {
    is=IOUtils.getResourceAsStream(path,getClass());
  }
 catch (  IOException e) {
    logger.error("Unable to load Spring resource " + path + " : "+ e.getMessage());
    return null;
  }
  if (is != null) {
    return new InputStreamResource(is);
  }
 else {
    logger.error("Unable to locate Spring resource " + path);
    return null;
  }
}
