{
  if (src instanceof Map) {
    if (key != null) {
      return ((Map)src).get(key);
    }
 else {
      throw new TransformerException(Message.createStaticMessage("Property 'key' must be set in order to use this transformer."));
    }
  }
 else   throw new TransformerException(Message.createStaticMessage("Message to transform must be of type java.util.Map"));
}
