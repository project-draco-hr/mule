{
  logger.debug("doConnect()");
  consumers=new LinkedBlockingDeque(receiversCount);
  for (int i=0; i < receiversCount; i++) {
    SubReceiver sub=new SubReceiver();
    try {
      sub.doConnect();
    }
 catch (    FatalException fex) {
      sub.doDisconnect();
      throw fex;
    }
 finally {
      consumers.addLast(sub);
    }
  }
}
