{
  this.asynchronous=asynchronous;
  if (asynchronous) {
    if (asyncPool == null) {
      asyncPool=MuleManager.getConfiguration().getDefaultThreadingProfile().createPool("spring-events");
    }
  }
 else {
    if (asyncPool != null) {
      asyncPool.shutdown();
      asyncPool=null;
    }
  }
}
