{
  String realmHeader="Basic realm=";
  if (realm != null) {
    realmHeader+="\"" + realm + "\"";
  }
  ParameterMap headers=new ParameterMap();
  headers.put(WWW_AUTHENTICATE,realmHeader);
  return Message.builder(message).nullPayload().attributes(new HttpResponseAttributes(UNAUTHORIZED.getStatusCode(),UNAUTHORIZED.getReasonPhrase(),headers)).build();
}
