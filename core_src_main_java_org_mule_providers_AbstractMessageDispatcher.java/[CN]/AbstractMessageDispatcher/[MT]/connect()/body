{
  if (connected) {
    return;
  }
  if (disposed) {
    if (logger.isWarnEnabled()) {
      logger.warn("Dispatcher has been disposed. Cannot connect to resource");
    }
  }
  if (logger.isDebugEnabled()) {
    logger.debug("Attempting to connect to: " + endpoint.getEndpointURI());
  }
  if (!connecting) {
    connecting=true;
    connectionStrategy.connect(this);
    logger.info("Successfully connected to: " + endpoint.getEndpointURI());
    return;
  }
  try {
    doConnect();
    connector.fireNotification(new ConnectionNotification(this,getConnectEventId(endpoint),ConnectionNotification.CONNECTION_CONNECTED));
  }
 catch (  Exception e) {
    connector.fireNotification(new ConnectionNotification(this,getConnectEventId(endpoint),ConnectionNotification.CONNECTION_FAILED));
    if (e instanceof ConnectException) {
      throw (ConnectException)e;
    }
 else {
      throw new ConnectException(e,this);
    }
  }
  connected=true;
  connecting=false;
}
