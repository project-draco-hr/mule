{
  if (logger.isDebugEnabled()) {
    logger.debug("Disconnecting from: " + endpoint.getEndpointURI());
  }
  MuleManager.getInstance().fireNotification(new ConnectionNotification(this,getConnectEventId(endpoint),ConnectionNotification.CONNECTION_DISCONNECTED));
  connected=false;
  doDisconnect();
  logger.info("Disconnected from: " + endpoint.getEndpointURI());
}
