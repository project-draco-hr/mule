{
  if (this.capturing) {
    return;
  }
  this.capturing=true;
  final Thread thread=new Thread(new Runnable(){
    public void run(){
      try {
        while (capturing) {
          controller.captureMemorySnapshot();
          Thread.sleep(seconds * 1000);
        }
      }
 catch (      Exception e) {
        logger.error("Failed to capture memory snapshot",e);
      }
    }
  }
);
  thread.setDaemon(true);
