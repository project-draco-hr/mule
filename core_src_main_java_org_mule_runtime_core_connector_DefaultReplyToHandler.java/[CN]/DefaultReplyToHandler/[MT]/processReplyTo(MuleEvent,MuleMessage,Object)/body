{
  if (logger.isDebugEnabled()) {
    logger.debug("sending reply to: " + replyTo);
  }
  event.removeFlowVariable(MULE_REPLY_TO_PROPERTY);
  event.removeFlowVariable(MULE_REMOTE_SYNC_PROPERTY);
  event.setMessage(MuleMessage.builder(event.getMessage()).removeOutboundProperty(MULE_REPLY_TO_PROPERTY).removeOutboundProperty(MULE_REMOTE_SYNC_PROPERTY).build());
}
