{
  if (logger.isDebugEnabled()) {
    logger.debug("sending reply to: " + replyTo);
  }
  return MuleEvent.builder(event).removeFlowVariable(MULE_REPLY_TO_PROPERTY).removeFlowVariable(MULE_REMOTE_SYNC_PROPERTY).message(MuleMessage.builder(event.getMessage()).removeOutboundProperty(MULE_REMOTE_SYNC_PROPERTY).build()).build();
}
