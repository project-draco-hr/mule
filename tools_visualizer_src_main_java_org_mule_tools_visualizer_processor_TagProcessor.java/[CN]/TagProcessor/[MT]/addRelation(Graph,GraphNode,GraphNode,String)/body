{
  if (null != src && null != dest) {
    GraphEdge ge=graph.addEdge(src,dest);
    ge.getInfo().setArrowHeadNone();
    if (caption != null) {
      ge.getInfo().setCaption(caption);
    }
  }
 else {
    environment.log("Null relation: " + describeNode(src) + " / "+ describeNode(dest)+ " ("+ caption+ ")");
  }
}
