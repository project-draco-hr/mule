{
  try {
    if (connected.get()) {
      disconnect();
    }
  }
 catch (  Exception e) {
    logger.error(e.getMessage(),e);
  }
  if (started.compareAndSet(true,false)) {
    try {
      if (logger.isDebugEnabled()) {
        logger.debug("Stopping: " + this);
      }
      doStop();
    }
 catch (    MuleException e) {
      logger.error(e.getMessage(),e);
    }
  }
}
