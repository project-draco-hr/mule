{
  try {
    if (connected.get()) {
      disconnect();
    }
  }
 catch (  Exception e) {
    logger.error(e.getMessage(),e);
  }
  lifecycleManager.fireStopPhase(new LifecycleCallback<O>(){
    public void onTransition(    String phaseName,    O object) throws MuleException {
      try {
        doStop();
      }
 catch (      MuleException e) {
        logger.error(e.getMessage(),e);
      }
    }
  }
);
}
