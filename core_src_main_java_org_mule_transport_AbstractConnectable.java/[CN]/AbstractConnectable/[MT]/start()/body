{
  if (!connected.get() && !connecting.get()) {
    startOnConnect=true;
    try {
      connect();
    }
 catch (    Exception e) {
      throw new LifecycleException(e,this);
    }
    return;
  }
  if (started.compareAndSet(false,true)) {
    if (logger.isDebugEnabled()) {
      logger.debug("Starting: " + this);
    }
    doStart();
  }
}
