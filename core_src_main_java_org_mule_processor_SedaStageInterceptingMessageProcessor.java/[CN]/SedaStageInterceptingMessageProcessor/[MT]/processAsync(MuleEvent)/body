{
  try {
    if (isStatsEnabled()) {
      queueStatistics.incQueuedEvent();
    }
    enqueue(event);
  }
 catch (  Exception e) {
    FailedToQueueEventException e1=new FailedToQueueEventException(CoreMessages.interruptedQueuingEventFor(getStageDescription()),event.getMessage(),e);
    exceptionListener.exceptionThrown(e1);
  }
  if (logger.isTraceEnabled()) {
    logger.trace("MuleEvent added to queue for: " + getStageDescription());
  }
}
