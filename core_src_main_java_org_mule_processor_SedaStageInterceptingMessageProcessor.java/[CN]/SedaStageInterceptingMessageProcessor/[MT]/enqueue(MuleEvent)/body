{
  if (logger.isDebugEnabled()) {
    logger.debug(MessageFormat.format("{1}: Putting event on queue {2}",queue.getName(),getStageDescription(),event));
  }
  boolean queued=queue.offer(DefaultMuleEvent.copy(event),threadTimeout);
  if (queued) {
    fireAsyncScheduledNotification(event);
  }
 else {
    String message=String.format("The queue for '%1s' did not accept new event within %2d %3s",getStageDescription(),threadTimeout,TimeUnit.MILLISECONDS);
    throw new FailedToQueueEventException(CoreMessages.createStaticMessage(message),event);
  }
}
