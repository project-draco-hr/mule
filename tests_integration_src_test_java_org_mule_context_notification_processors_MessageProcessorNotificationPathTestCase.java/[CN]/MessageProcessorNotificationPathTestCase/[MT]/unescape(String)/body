{
  StringBuilder builder=new StringBuilder(name.length());
  for (int i=0; i < name.length(); i++) {
    char c=name.charAt(i);
    if (i < (name.length() - 1) && name.charAt(i + 1) == '/') {
      builder.append("/");
      i++;
    }
 else {
      builder.append(c);
    }
  }
  return builder.toString();
}
