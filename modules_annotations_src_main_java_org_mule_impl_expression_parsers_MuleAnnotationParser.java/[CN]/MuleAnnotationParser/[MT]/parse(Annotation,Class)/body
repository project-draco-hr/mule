{
  Evaluator evaluator=annotation.annotationType().getAnnotation(Evaluator.class);
  if (evaluator != null) {
    Mule muleAnnotation=(Mule)annotation;
    String val=muleAnnotation.value();
    if ("message.payload".equals(val)) {
      val+="(" + parameterType.getName() + ")";
    }
    ExpressionArgument arg=new ExpressionArgument(null,new ExpressionConfig(val,evaluator.value(),null),muleAnnotation.required(),parameterType);
    return arg;
  }
 else {
    throw new IllegalArgumentException("The @Evaluator annotation must be set on an Expression Annotation");
  }
}
