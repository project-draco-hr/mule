{
  closed.set(true);
  try {
    if (socket != null && !socket.isClosed()) {
      if (logger.isDebugEnabled()) {
        logger.debug("Closing listener: " + socket.getLocalSocketAddress().toString());
      }
      socket.close();
    }
  }
 catch (  IOException e) {
    logger.warn("Socket close failed with: " + e);
  }
}
