{
  while (true) {
    if (stopRequested) {
      logger.debug("Received request to stop processing events");
      break;
    }
    try {
      doRun();
    }
 catch (    RuntimeException e) {
      logger.warn(String.format("Caught exception on event processing thread '%s'",getName()),e);
    }
    if (delay(delayTime)) {
      break;
    }
  }
  logger.debug(getName() + " fully stopped");
}
