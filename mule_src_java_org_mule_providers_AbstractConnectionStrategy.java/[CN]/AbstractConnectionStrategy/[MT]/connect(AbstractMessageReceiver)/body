{
  if (doThreading) {
    try {
      receiver.getWorkManager().scheduleWork(new Work(){
        public void release(){
        }
        public void run(){
          try {
            doConnect(receiver);
          }
 catch (          FatalConnectException e) {
            receiver.handleException(e);
          }
        }
      }
);
    }
 catch (    WorkException e) {
      receiver.handleException(e);
    }
  }
 else {
    doConnect(receiver);
  }
}
