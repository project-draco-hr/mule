{
  Class[] types;
  if (object.getClass().isArray()) {
    Object[] objects=(Object[])object;
    types=new Class[objects.length];
    for (int i=0; i < objects.length; i++) {
      types[i]=objects[i].getClass();
    }
  }
 else {
    types=new Class[1];
    types[0]=object.getClass();
  }
  return types;
}
