{
  String request="<soap:Envelope xmlns:soap=\"http://schemas.xmlsoap.org/soap/envelope/\" " + "xmlns:xsd=\"http://www.w3.org/2001/XMLSchema\" " + "xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\">"+ "<soap:Body>"+ "<echo xmlns=\"http://simple.components.mule.org/\">"+ "<echo>Test String</echo>"+ "</echo>"+ "</soap:Body>"+ "</soap:Envelope>";
  MuleClient client=new MuleClient();
  MuleMessage result=client.send("http://localhost:" + HTTP_PORT + "/services/mycomponent",request,null);
  String res=result.getPayloadAsString();
  assertTrue(res.indexOf("Test String") != -1);
}
