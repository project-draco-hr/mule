{
  Element configurationType=(Element)schema.selectSingleNode("/xsd:schema/xsd:complexType[@name='configurationType']");
  assertEquals(Boolean.toString(muleContext.getConfiguration().isDefaultSynchronousEndpoints()),configurationType.selectSingleNode("xsd:attribute[@name='defaultSynchronousEndpoints']/@default").getStringValue());
  assertEquals(Boolean.toString(muleContext.getConfiguration().isDefaultRemoteSync()),configurationType.selectSingleNode("xsd:attribute[@name='defaultRemoteSync']/@default").getStringValue());
  assertEquals(muleContext.getConfiguration().getDefaultSynchronousEventTimeout(),configurationType.numberValueOf("xsd:attribute[@name='defaultSynchronousEventTimeout']/@default").intValue());
  assertEquals(muleContext.getConfiguration().getDefaultTransactionTimeout(),configurationType.numberValueOf("xsd:attribute[@name='defaultTransactionTimeout']/@default").intValue());
}
