{
  Element configurationType=(Element)schema.selectSingleNode("/xsd:schema/xsd:complexType[@name='configurationType']");
  assertEquals(muleContext.getConfiguration().getDefaultResponseTimeout(),configurationType.numberValueOf("xsd:attribute[@name='defaultResponseTimeout']/@default").intValue());
  assertEquals(muleContext.getConfiguration().getDefaultTransactionTimeout(),configurationType.numberValueOf("xsd:attribute[@name='defaultTransactionTimeout']/@default").intValue());
  assertEquals(muleContext.getConfiguration().getShutdownTimeout(),configurationType.numberValueOf("xsd:attribute[@name='shutdownTimeout']/@default").intValue());
}
