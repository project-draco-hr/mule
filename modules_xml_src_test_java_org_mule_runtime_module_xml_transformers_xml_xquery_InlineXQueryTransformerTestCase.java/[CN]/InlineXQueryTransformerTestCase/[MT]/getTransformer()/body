{
  XQueryTransformer transformer=new XQueryTransformer();
  transformer.setXquery("declare variable $document external;\n" + "<cd-listings> {\n" + "    for $cd in $document/catalog/cd\n"+ "    return <cd-title>{data($cd/title)}</cd-title>\n"+ "} </cd-listings>");
  transformer.setReturnDataType(DataType.STRING);
  transformer.setMuleContext(muleContext);
  transformer.initialise();
  return transformer;
}
