{
  if (log.isDebugEnabled())   checkedOut--;
synchronized (pool) {
    int currentSize=pool.size();
    if (currentSize < poolSize) {
      if (log.isTraceEnabled())       log.trace("returning connection to pool, pool size: " + (currentSize + 1));
      pool.add(conn);
      return;
    }
  }
  log.debug("closing JDBC connection");
  conn.close();
}
