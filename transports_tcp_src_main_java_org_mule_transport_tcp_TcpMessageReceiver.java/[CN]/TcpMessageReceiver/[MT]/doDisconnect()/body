{
  disposing.set(true);
  try {
    if (serverSocket != null) {
      if (logger.isDebugEnabled()) {
        logger.debug("Closing: " + serverSocket);
      }
      serverSocket.close();
    }
  }
 catch (  IOException e) {
    logger.warn("Failed to close server socket: " + e.getMessage(),e);
  }
}
