{
  File f=new File("./.mule/in/test.txt");
  f.createNewFile();
  File errorFile=new File("./.mule/errors/test-1.out");
  boolean testSucceded=false;
  int timesTried=0;
  while (timesTried <= 3) {
    Thread.sleep(500 * ++timesTried);
    if (errorFile.exists()) {
      testSucceded=true;
      break;
    }
  }
  if (!testSucceded) {
    fail("Exception strategy didn't move the file to the error folder.");
  }
}
