{
  String realmHeader="Basic realm=";
  if (realm != null) {
    realmHeader+="\"" + realm + "\"";
  }
  String finalRealmHeader=realmHeader;
  event.setMessage(MuleMessage.builder(event.getMessage()).addOutboundProperty(WWW_AUTHENTICATE,finalRealmHeader).addOutboundProperty(HTTP_STATUS_PROPERTY,UNAUTHORIZED.getStatusCode()).build());
}
