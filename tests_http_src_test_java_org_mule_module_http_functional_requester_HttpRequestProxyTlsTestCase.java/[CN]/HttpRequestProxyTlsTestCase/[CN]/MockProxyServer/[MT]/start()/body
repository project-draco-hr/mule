{
  serverSocket=new ServerSocket(proxyServerPort);
  serverThread=new Thread(new Runnable(){
    @Override public void run(){
      try {
        Socket clientSocket=serverSocket.accept();
        handleRequest(clientSocket);
      }
 catch (      Exception e) {
        throw new RuntimeException(e);
      }
    }
  }
);
  serverThread.start();
}
