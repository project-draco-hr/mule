{
  File f=new File(scriptLocation);
  if (f.exists()) {
    try {
      return f.toURL();
    }
 catch (    MalformedURLException e) {
      logger.error("Failed to create URL from file: " + f.getAbsolutePath(),e);
      return null;
    }
  }
 else {
    return ClassUtils.getResource(scriptLocation,getClass());
  }
}
