{
  if (!getCurrentState().equals(UNKNOWN) && !getCurrentState().equals(INITIALIZED)) {
    throw new RegistryException("Illegal status: " + getCurrentState());
  }
  try {
    if (!isTransient) {
      createComponent();
      initComponent();
    }
    if (getStateAtShutdown().equals(RUNNING)) {
      start();
    }
    doRestoreState();
  }
 catch (  Exception e) {
    throw new RegistryException(e);
  }
}
