{
  try {
    Map map=applicationContext.getBeansOfType(type);
    return map.values();
  }
 catch (  BeanCreationException bcex) {
    throw new MuleRuntimeException(MessageFactory.createStaticMessage(String.format("Failed to lookup beans of type %s from the Spring registry",type)),bcex);
  }
catch (  Exception e) {
    logger.debug(e);
    return CollectionUtils.EMPTY_COLLECTION;
  }
}
