{
  flow.initialise();
  flow.start();
  MuleEvent response=directInboundMessageSource.process(MuleTestUtils.getTestEvent("hello",MessageExchangePattern.ONE_WAY,muleContext));
  Thread.sleep(50);
  assertSame(VoidMuleEvent.getInstance(),response);
  assertEquals("helloabc",sensingMessageProcessor.event.getMessageAsString());
  assertNotSame(Thread.currentThread(),sensingMessageProcessor.event.getMessage().getOutboundProperty("thread"));
}
