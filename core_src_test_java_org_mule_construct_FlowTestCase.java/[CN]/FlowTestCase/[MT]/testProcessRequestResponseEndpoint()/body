{
  flow.initialise();
  flow.start();
  MuleEvent response=directInboundMessageSource.process(MuleTestUtils.getTestEvent("hello",MessageExchangePattern.REQUEST_RESPONSE,muleContext));
  assertEquals("helloabcdef",response.getMessageAsString());
  assertEquals(Thread.currentThread(),response.getMessage().getOutboundProperty("thread"));
  assertEquals("helloabcdef",sensingMessageProcessor.event.getMessageAsString());
  assertEquals(Thread.currentThread(),sensingMessageProcessor.event.getMessage().getOutboundProperty("thread"));
}
