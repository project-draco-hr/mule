{
  if (this.transaction != null) {
    TransactionManager mgr=JbiContainer.Factory.getInstance().getTransactionManager();
    try {
      if (mgr.getTransaction() == this.transaction) {
        mgr.suspend();
      }
    }
 catch (    Exception e) {
      throw new MessagingException("Can not suspend transaction",e);
    }
  }
}
