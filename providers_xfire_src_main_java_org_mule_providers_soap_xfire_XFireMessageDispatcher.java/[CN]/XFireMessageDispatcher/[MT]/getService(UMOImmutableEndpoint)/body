{
  String pathInfo=endpoint.getEndpointURI().getPath();
  if (StringUtils.isEmpty(pathInfo)) {
    return endpoint.getEndpointURI().getHost();
  }
  String serviceName;
  int i=pathInfo.lastIndexOf("/");
  if (i > -1) {
    serviceName=pathInfo.substring(i + 1);
  }
 else {
    serviceName=pathInfo;
  }
  return serviceName;
}
