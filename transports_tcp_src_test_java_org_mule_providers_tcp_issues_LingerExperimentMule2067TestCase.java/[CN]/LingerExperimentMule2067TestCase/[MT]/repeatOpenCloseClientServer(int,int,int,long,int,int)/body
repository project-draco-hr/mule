{
  logger.info("Repeating openCloseClientServer with pauses of " + pause + " ms and lingers of "+ clientLinger+ "/"+ serverLinger+ " s (client/server)");
  for (int i=0; i < numberOfRepeats; i++) {
    if (0 != i && pause != NO_WAIT) {
      try {
synchronized (this) {
          if (pause > 0) {
            this.wait(pause);
          }
        }
      }
 catch (      InterruptedException e) {
      }
    }
    openCloseClientServer(numberOfConnections,port,clientLinger,serverLinger);
  }
}
