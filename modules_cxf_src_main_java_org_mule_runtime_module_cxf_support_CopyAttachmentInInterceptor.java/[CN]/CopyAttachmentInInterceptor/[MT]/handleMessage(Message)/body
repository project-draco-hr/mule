{
  MuleEvent event=(MuleEvent)message.getExchange().get(CxfConstants.MULE_EVENT);
  Collection<Attachment> atts=message.getAttachments();
  if (atts != null && !atts.isEmpty()) {
    message.getExchange().put(CxfConstants.MULE_EVENT,MuleEvent.builder(event).addFlowVariable(CxfConstants.ATTACHMENTS,atts).message(MuleMessage.builder(event.getMessage()).addOutboundProperty(CONTENT_TYPE,event.getMessage().getInboundProperty(CONTENT_TYPE)).build()).build());
  }
}
