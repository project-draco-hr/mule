{
  Connection oldConnection;
  readLock.lock();
  try {
    if (connection != null && validateConnection(connection).isValid()) {
      return connection;
    }
    oldConnection=connection;
  }
  finally {
    readLock.unlock();
  }
  writeLock.lock();
  try {
    if (connection != null) {
      if (connection != oldConnection) {
        return connection;
      }
      disconnectAndCleanConnection(connection);
    }
    connection=createConnection();
    return connection;
  }
  finally {
    writeLock.unlock();
  }
}
