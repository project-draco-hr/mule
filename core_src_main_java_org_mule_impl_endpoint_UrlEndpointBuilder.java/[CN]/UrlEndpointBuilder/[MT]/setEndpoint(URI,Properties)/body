{
  address="";
  if (uri.getHost() != null) {
    this.address=uri.getScheme() + "://" + uri.getHost();
    if (uri.getPort() != -1) {
      address+=":" + uri.getPort();
    }
  }
  if (StringUtils.isNotBlank(uri.getPath())) {
    address+=uri.getPath();
  }
  if (StringUtils.isNotBlank(uri.getQuery())) {
    address+="?" + uri.getQuery();
  }
}
