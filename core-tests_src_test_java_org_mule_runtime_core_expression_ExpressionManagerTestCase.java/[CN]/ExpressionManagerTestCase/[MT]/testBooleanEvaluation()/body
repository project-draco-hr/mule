{
  MuleEvent event=getTestEvent("test");
  event=MuleEvent.builder(event).message(MuleMessage.builder(event.getMessage()).addOutboundProperty("user","vasya").addOutboundProperty("password","pupkin").addOutboundProperty("host","example.com").addOutboundProperty("port","12345").build()).build();
  assertFalse(muleContext.getExpressionManager().evaluateBoolean("message.outboundProperties.user",event,getTestFlow()));
  assertTrue(muleContext.getExpressionManager().evaluateBoolean("message.outboundProperties.user",event,getTestFlow(),false,true));
  assertFalse(muleContext.getExpressionManager().evaluateBoolean("message.outboundProperties.user",event,getTestFlow(),false,false));
  assertFalse(muleContext.getExpressionManager().evaluateBoolean("message.outboundProperties.ur",event,getTestFlow()));
  assertTrue(muleContext.getExpressionManager().evaluateBoolean("message.outboundProperties.ur",event,getTestFlow(),true,false));
  assertFalse(muleContext.getExpressionManager().evaluateBoolean("message.outboundProperties.ur",event,getTestFlow(),false,false));
  assertTrue(muleContext.getExpressionManager().evaluateBoolean("true",event,getTestFlow()));
  assertFalse(muleContext.getExpressionManager().evaluateBoolean("false",event,getTestFlow()));
}
