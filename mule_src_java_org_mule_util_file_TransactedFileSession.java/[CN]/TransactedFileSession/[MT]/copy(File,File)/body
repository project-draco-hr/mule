{
  if (dest.exists()) {
    delete(dest);
  }
  InputStream is=null;
  OutputStream os=null;
  try {
    is=openInputStream(source);
    try {
      os=openOutputStream(dest);
      IOUtils.copy(is,os);
    }
  finally {
      IOUtils.closeQuietly(os);
    }
  }
  finally {
    IOUtils.closeQuietly(is);
  }
}
