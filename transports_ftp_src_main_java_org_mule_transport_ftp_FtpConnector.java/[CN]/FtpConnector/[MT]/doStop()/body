{
  if (logger.isDebugEnabled()) {
    logger.debug("Stopping all pools");
  }
  try {
    for (    ObjectPool pool : pools.values()) {
      pool.close();
    }
  }
 catch (  Exception e) {
    throw new ConnectorException(CoreMessages.failedToStop("FTP Connector"),this,e);
  }
 finally {
    pools.clear();
  }
}
