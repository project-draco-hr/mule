{
  lifecycleManager.fireStopPhase(new LifecycleCallback<Connector>(){
    @Override public void onTransition(    String phaseName,    Connector object) throws MuleException {
      shutdownScheduler();
      doStop();
      if (receivers != null) {
        for (        MessageReceiver receiver : receivers.values()) {
          if (logger.isDebugEnabled()) {
            logger.debug("Stopping receiver on endpoint: " + receiver.getEndpoint().getEndpointURI());
          }
          receiver.stop();
        }
      }
      disposeWorkManagers();
      clearDispatchers();
      clearRequesters();
      scheduler=null;
    }
  }
);
}
