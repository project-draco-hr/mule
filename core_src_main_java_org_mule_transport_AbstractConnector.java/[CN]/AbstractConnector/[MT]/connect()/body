{
  this.checkDisposed();
  if (isConnected()) {
    return;
  }
  retryPolicyTemplate.execute(new RetryCallback(){
    public void doWork(    RetryContext context) throws Exception {
      doConnect();
      setConnected(true);
      if (startOnConnect) {
        start();
      }
    }
    public String getWorkDescription(){
      return getConnectionDescription();
    }
  }
,muleContext.getWorkManager());
}
