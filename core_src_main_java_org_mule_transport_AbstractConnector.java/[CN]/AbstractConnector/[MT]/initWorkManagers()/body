{
  if (receiverWorkManager.get() == null) {
    WorkManager newWorkManager=this.getReceiverThreadingProfile().createWorkManager(getName() + ".receiver",muleContext.getConfiguration().getShutdownTimeout());
    if (receiverWorkManager.compareAndSet(null,newWorkManager)) {
      newWorkManager.start();
    }
  }
  if (dispatcherWorkManager.get() == null) {
    WorkManager newWorkManager=this.getDispatcherThreadingProfile().createWorkManager(getName() + ".dispatcher",muleContext.getConfiguration().getShutdownTimeout());
    if (dispatcherWorkManager.compareAndSet(null,newWorkManager)) {
      newWorkManager.start();
    }
  }
  if (requesterWorkManager.get() == null) {
    WorkManager newWorkManager=this.getRequesterThreadingProfile().createWorkManager(getName() + ".requester",muleContext.getConfiguration().getShutdownTimeout());
    if (requesterWorkManager.compareAndSet(null,newWorkManager)) {
      newWorkManager.start();
    }
  }
}
