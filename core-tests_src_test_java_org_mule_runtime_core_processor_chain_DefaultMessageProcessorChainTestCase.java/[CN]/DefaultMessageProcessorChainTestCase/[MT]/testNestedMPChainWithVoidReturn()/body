{
  DefaultMessageProcessorChainBuilder builder=new DefaultMessageProcessorChainBuilder(muleContext);
  builder.chain(getAppendingMP("1"),new DefaultMessageProcessorChainBuilder(muleContext).chain(getAppendingMP("a"),new ReturnVoidMP(),getAppendingMP("b")).build(),new ReturnVoidMP(),getAppendingMP("2"));
