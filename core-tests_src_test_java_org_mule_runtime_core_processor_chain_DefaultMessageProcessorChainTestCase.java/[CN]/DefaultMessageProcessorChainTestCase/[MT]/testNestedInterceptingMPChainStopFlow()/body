{
  DefaultMessageProcessorChainBuilder builder=new DefaultMessageProcessorChainBuilder(muleContext);
  builder.chain(new AppendingInterceptingMP("1"),new DefaultMessageProcessorChainBuilder(muleContext).chain(new AppendingInterceptingMP("a",true),new AppendingInterceptingMP("b")).build(),new AppendingInterceptingMP("3"));
