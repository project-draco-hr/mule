{
  if (endpoint == null) {
    throw new InitialisationException(CoreMessages.objectIsNull("Endpoint"),this);
  }
  if (endpoint.canRequest()) {
    inbound=true;
  }
 else   if (endpoint.canSend()) {
    inbound=false;
  }
 else {
    throw new InitialisationException(CoreMessages.authEndpointTypeForFilterMustBe(UMOImmutableEndpoint.ENDPOINT_TYPE_SENDER + " or " + UMOImmutableEndpoint.ENDPOINT_TYPE_RECEIVER,endpoint.getType()),this);
  }
  doInitialise();
}
