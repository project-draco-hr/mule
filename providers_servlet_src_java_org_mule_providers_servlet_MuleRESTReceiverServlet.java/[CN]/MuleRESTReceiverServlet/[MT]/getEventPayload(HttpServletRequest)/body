{
  String payload=request.getParameter(payloadParameterName);
  if (payload == null) {
    BufferedReader reader=request.getReader();
    StringBuffer buffer=new StringBuffer();
    String line;
    while ((line=reader.readLine()) != null) {
      buffer.append(line);
      buffer.append("\n");
    }
    payload=buffer.toString();
  }
  return payload;
}
