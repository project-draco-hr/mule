{
  StringBuffer buffer=new StringBuffer();
  buffer.append(protocol);
  buffer.append("://");
  if (null != username) {
    buffer.append(username);
    if (null != password) {
      buffer.append(":");
      buffer.append(password);
    }
    buffer.append("@");
  }
  buffer.append(hostname);
  if (null != port) {
    buffer.append(":");
    buffer.append(port);
  }
  if (null != path) {
    buffer.append("/");
    buffer.append(path);
  }
  return buffer.toString();
}
