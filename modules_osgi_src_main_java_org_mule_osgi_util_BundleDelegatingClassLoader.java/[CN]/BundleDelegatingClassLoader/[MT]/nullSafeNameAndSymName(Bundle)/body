{
  if (bundle == null)   return NULL_STRING;
  Dictionary dict=bundle.getHeaders();
  if (dict == null)   return NULL_STRING;
  StringBuffer buf=new StringBuffer();
  String name=(String)dict.get(org.osgi.framework.Constants.BUNDLE_NAME);
  if (name == null)   buf.append(NULL_STRING);
 else   buf.append(name);
  buf.append(" (");
  String sname=(String)dict.get(org.osgi.framework.Constants.BUNDLE_SYMBOLICNAME);
  if (sname == null)   buf.append(NULL_STRING);
 else   buf.append(sname);
  buf.append(")");
  return buf.toString();
}
