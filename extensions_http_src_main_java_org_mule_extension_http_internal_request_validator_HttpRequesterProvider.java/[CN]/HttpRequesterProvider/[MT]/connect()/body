{
  String threadNamePrefix=String.format(THREAD_NAME_PREFIX_PATTERN,ThreadNameHelper.getPrefix(muleContext),configName);
  HttpClientConfiguration configuration=new HttpClientConfiguration.Builder().setUriParameters(new DefaultUriParameters(protocol,host,port)).setTlsContextFactory(tlsContextFactory).setProxyConfig(proxyConfig).setClientSocketProperties(clientSocketProperties).setMaxConnections(maxConnections).setUsePersistentConnections(usePersistentConnections).setConnectionIdleTimeout(connectionIdleTimeout).setThreadNamePrefix(threadNamePrefix).setOwnerName(configName).build();
  HttpClientFactory httpClientFactory=muleContext.getRegistry().get(OBJECT_HTTP_CLIENT_FACTORY);
  HttpClient httpClient;
  if (httpClientFactory == null) {
    httpClient=new GrizzlyHttpClient(configuration);
  }
 else {
    httpClient=httpClientFactory.create(configuration);
  }
  return httpClient;
}
