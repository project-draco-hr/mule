{
  try {
    if (socket != null) {
      if (logger.isDebugEnabled()) {
        logger.debug("Closing: " + socket);
      }
      try {
        socket.shutdownOutput();
      }
 catch (      UnsupportedOperationException e) {
      }
      if (in != null) {
        in.close();
      }
      if (out != null) {
        out.close();
      }
      socket.close();
    }
  }
 catch (  IOException e) {
    if (logger.isDebugEnabled()) {
      logger.debug("(Ignored) Error closing the socket: " + e.getMessage());
    }
  }
 finally {
    socket=null;
  }
}
