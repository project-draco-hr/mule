{
  char[] chars=string.toCharArray();
  char c;
  StringBuffer buffer=new StringBuffer(string.length());
  String converted;
  for (int i=0; i < chars.length; i++) {
    c=chars[i];
    converted=toSgmlEntity(c);
    if (converted != null) {
      buffer.append(converted);
    }
 else {
      buffer.append(c);
    }
  }
  return buffer.toString();
}
