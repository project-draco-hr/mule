{
  if (muleContext == null || muleContext.isDisposing() || muleContext.isDisposed()) {
    return;
  }
  if (message != null && muleContext.getRegistry().lookupObject(MuleProperties.OBJECT_MULE_STREAM_CLOSER_SERVICE) != null) {
    ((StreamCloserService)muleContext.getRegistry().lookupObject(MuleProperties.OBJECT_MULE_STREAM_CLOSER_SERVICE)).closeStream(message.getPayload());
  }
}
