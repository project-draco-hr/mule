{
  if (returnClass != null) {
    if (!returnClass.isInstance(object)) {
      throw new TransformerException(CoreMessages.transformUnexpectedType(object.getClass(),returnClass),this);
    }
  }
  if (logger.isDebugEnabled()) {
    logger.debug("The transformed object is of expected type. Type is: " + ClassUtils.getSimpleName(object.getClass()));
  }
  return object;
}
