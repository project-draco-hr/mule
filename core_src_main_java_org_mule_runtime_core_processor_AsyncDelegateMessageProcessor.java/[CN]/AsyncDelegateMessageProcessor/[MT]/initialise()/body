{
  if (delegate == null) {
    throw new InitialisationException(objectIsNull("delegate message processor"),this);
  }
  if (processingStrategyFactory == null) {
    throw new InitialisationException(objectIsNull("processingStrategy"),this);
  }
  processingStrategy=processingStrategyFactory.create();
  validateFlowConstruct();
  StageNameSource nameSource=null;
  if (name != null) {
    nameSource=((StageNameSourceProvider)flowConstruct).getAsyncStageNameSource(name);
  }
 else {
    nameSource=((StageNameSourceProvider)flowConstruct).getAsyncStageNameSource();
  }
  MessageProcessorChainBuilder builder=new DefaultMessageProcessorChainBuilder();
  processingStrategy.configureProcessors(Collections.singletonList(delegate),nameSource,builder,muleContext);
  target=builder.build();
  super.initialise();
}
