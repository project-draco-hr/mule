{
  if (logger.isDebugEnabled()) {
    logger.debug("Attempting to route event: " + event.getId());
  }
  if (filter == null) {
    return true;
  }
  UMOMessage message=event.getMessage();
  if (transformFirst) {
    try {
      Object payload=event.getTransformedMessage();
      message=new MuleMessage(payload,message);
    }
 catch (    TransformerException e) {
      throw new RoutingException(new Message(Messages.TRANSFORM_FAILED_BEFORE_FILTER),event.getMessage(),event.getEndpoint(),e);
    }
  }
  boolean result=filter.accept(message);
  if (logger.isDebugEnabled()) {
    logger.debug("Event " + event.getId() + (result ? " passed filter " : " did not pass filter ")+ filter.getClass().getName());
  }
  return result;
}
