{
  final Work work=mock(Work.class);
  doAnswer(new Answer(){
    @Override public Object answer(    InvocationOnMock invocation) throws Throwable {
      work.run();
      return null;
    }
  }
).when(delegateWorkManager).scheduleWork(Matchers.<Work>any());
  trackingWorkManager.scheduleWork(work);
