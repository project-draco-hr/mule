{
  if (samples.isEmpty()) {
    return 0.0;
  }
 else {
    double total=0.0;
    long current=getTime();
    Iterator it=samples.iterator();
    Sample sample=null;
    while (it.hasNext()) {
      sample=(Sample)it.next();
      if (current - sample.time > length) {
        break;
      }
      total+=sample.value;
    }
    return total / (1 + current - (sample != null ? sample.time : 0));
  }
}
