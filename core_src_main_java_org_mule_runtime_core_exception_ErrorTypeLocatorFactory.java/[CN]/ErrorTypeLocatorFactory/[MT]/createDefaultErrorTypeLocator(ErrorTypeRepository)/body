{
  return ErrorTypeLocator.builder(errorTypeRepository).defaultExceptionMapper(ExceptionMapper.builder().addExceptionMapping(TransformerMessagingException.class,errorTypeRepository.lookupErrorType(CORE_NAMESPACE_NAME,TRANSFORMATION_ERROR_IDENTIFIER)).addExceptionMapping(ExpressionRuntimeException.class,errorTypeRepository.lookupErrorType(CORE_NAMESPACE_NAME,EXPRESSION_ERROR_IDENTIFIER)).addExceptionMapping(Exception.class,errorTypeRepository.lookupErrorType(CORE_NAMESPACE_NAME,UNKNOWN_ERROR_IDENTIFIER)).build()).build();
}
