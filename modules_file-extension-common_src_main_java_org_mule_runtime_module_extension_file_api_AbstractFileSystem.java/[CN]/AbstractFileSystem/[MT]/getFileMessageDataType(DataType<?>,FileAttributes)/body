{
  String presumedMimeType=mimetypesFileTypeMap.getContentType(attributes.getPath());
  DataType<InputStream> newDataType=DataType.builder().type(InputStream.class).mimeType(presumedMimeType != null ? presumedMimeType : originalDataType.getMimeType()).encoding(originalDataType.getEncoding()).build();
  return newDataType;
}
