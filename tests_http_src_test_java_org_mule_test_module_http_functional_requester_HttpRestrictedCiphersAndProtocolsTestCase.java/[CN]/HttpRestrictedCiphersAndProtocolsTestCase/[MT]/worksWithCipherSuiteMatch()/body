{
  tlsContextFactory.setEnabledCipherSuites(cipherSuites.getValue());
  HttpRequestOptions requestOptions=optionsBuilder.tlsContextFactory(tlsContextFactory).build();
  InternalMessage response=muleContext.getClient().send(String.format("https://localhost:%s",port3.getValue()),getTestMuleMessage(TEST_PAYLOAD),requestOptions).getRight();
  assertThat(muleContext.getTransformationService().transform(response,DataType.STRING).getPayload().getValue(),is(TEST_PAYLOAD));
}
