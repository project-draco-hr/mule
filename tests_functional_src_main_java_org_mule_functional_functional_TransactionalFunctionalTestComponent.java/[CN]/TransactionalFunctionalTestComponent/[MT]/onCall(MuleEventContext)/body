{
  Object replyMessage=super.onCall(context);
  if (expectTransaction) {
    Transaction currentTx=context.getCurrentTransaction();
    if (currentTx == null || !currentTx.isBegun()) {
      throw new TransactionException(I18nMessageFactory.createStaticMessage("Trying to roll back transaction but no transaction is underway."));
    }
    if (rollback) {
      logger.info("@@@@ Rolling back transaction @@@@");
      currentTx.setRollbackOnly();
    }
  }
  return replyMessage;
}
