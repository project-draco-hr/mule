{
  assertFalse(component.isStarted());
  assertFalse(component.isPaused());
  component.stop();
  component.initialise();
  assertFalse(component.isStarted());
  component.stop();
  assertFalse(component.isStarted());
  component.start();
  assertTrue(component.isStarted());
  component.stop();
  assertFalse(component.isStarted());
  component.stop();
  assertFalse(component.isStarted());
}
