{
  MuleClient client=muleContext.getClient();
  DataHandler dataHandler=new DataHandler(new ByteArrayDataSource(TEST_MESSAGE.getBytes(),MediaType.XML,"testAttachment.txt"));
  InternalMessage msg=InternalMessage.builder().payload(TEST_MESSAGE).addOutboundAttachment("testAttachment",dataHandler).build();
  InternalMessage response=client.send("http://localhost:" + httpPort.getValue() + "/testInput",msg).getRight();
  assertThat(getPayloadAsString(response),equalTo("testAttachment:testAttachment.txt"));
}
