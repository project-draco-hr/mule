{
  String text="";
  List lines=readToStringList(reader);
  StringBuffer sb=new StringBuffer(lines.size() * 5);
  for (Iterator it=lines.iterator(); it.hasNext(); ) {
    String line=(String)it.next();
    if (sb.length() > 0) {
      sb.append("\n");
    }
    sb.append(line);
  }
  return sb.toString();
}
