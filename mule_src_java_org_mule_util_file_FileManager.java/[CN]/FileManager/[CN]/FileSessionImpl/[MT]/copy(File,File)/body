{
  if (dest.exists()) {
    delete(dest);
  }
  InputStream is=null;
  OutputStream os=null;
  try {
    is=openInputStream(source);
    try {
      os=openOutputStream(dest);
      byte[] buffer=new byte[1024 * 4];
      int n=0;
      while (-1 != (n=is.read(buffer))) {
        os.write(buffer,0,n);
      }
    }
  finally {
      os.close();
    }
  }
  finally {
    is.close();
  }
}
