{
  try {
    ConfigurationBuilder configBuilder=new SpringXmlConfigurationBuilder("org/mule/config/spring/parsers/specific/component-bad-test-flow.xml");
    muleContextFactory.createMuleContext(new TestServicesConfigurationBuilder(),configBuilder).initialise();
    throw new IllegalStateException("Expected config to fail");
  }
 catch (  Exception e) {
    assertEquals(InitialisationException.class,e.getClass());
    assertEquals(BeanCreationException.class,e.getCause().getClass());
  }
}
