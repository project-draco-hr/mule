{
  if (args.length < 2) {
    domain.warning("Need at least one file name for ${basename;...}");
    return null;
  }
 else {
    String del="";
    StringBuffer sb=new StringBuffer();
    for (int i=1; i < args.length; i++) {
      File f=new File(args[i]).getAbsoluteFile();
      if (f.exists() && f.getParentFile().exists()) {
        sb.append(del);
        sb.append(f.getName());
        del=",";
      }
    }
    return sb.toString();
  }
}
