{
  if (args.length < 2) {
    domain.warning("Need at least one file name for ${isfile;...}");
    return null;
  }
 else {
    boolean isfile=true;
    for (int i=1; i < args.length; i++) {
      File f=new File(args[i]).getAbsoluteFile();
      isfile&=f.isFile();
    }
    return isfile ? "true" : "false";
  }
}
