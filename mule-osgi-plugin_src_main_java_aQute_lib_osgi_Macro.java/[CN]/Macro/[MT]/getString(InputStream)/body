{
  try {
    StringBuilder sb=new StringBuilder();
    BufferedReader rdr=new BufferedReader(new InputStreamReader(in));
    String line=null;
    while ((line=rdr.readLine()) != null) {
      sb.append(line);
      sb.append("\n");
    }
    return sb.toString();
  }
  finally {
    in.close();
  }
}
