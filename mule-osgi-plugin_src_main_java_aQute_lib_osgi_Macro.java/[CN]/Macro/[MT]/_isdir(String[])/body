{
  if (args.length < 2) {
    domain.warning("Need at least one file name for ${isdir;...}");
    return null;
  }
 else {
    boolean isdir=true;
    for (int i=1; i < args.length; i++) {
      File f=new File(args[i]).getAbsoluteFile();
      isdir&=f.isDirectory();
    }
    return isdir ? "true" : "false";
  }
}
