{
  this.containerMode=containerMode;
  applySystemProperties();
  if (id == null) {
    id=UUID.getUUID();
  }
  if (domainId == null) {
    try {
      domainId=NetworkUtils.getLocalHost().getHostName();
    }
 catch (    UnknownHostException e) {
      logger.warn(e);
      domainId="org.mule";
    }
  }
  try {
    validateEncoding();
    validateXML();
  }
 catch (  FatalException e) {
    throw new RuntimeException(e);
  }
}
