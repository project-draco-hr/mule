{
  workManager.stop();
  if (proxyPool != null) {
    try {
      proxyPool.stop();
      proxyPool.clearPool();
    }
 catch (    Exception e) {
      logger.error("Failed to stop component pool: " + e.getMessage(),e);
    }
    poolInitialised.set(false);
  }
 else   if (componentProxy != null) {
    componentProxy.stop();
  }
}
