{
  if (!providerModel.getConnectionType().isAssignableFrom(connectionType)) {
    throw new IllegalModelDefinitionException(String.format("Extension '%s' defines a connection provider of name '%s' which yields connections of type '%s'. " + "However, the extension's operations expect connections of type '%s'. Please make sure that all connection " + "providers in the extension can be used with all its operations",extensionModel.getName(),providerModel.getName(),providerModel.getConnectionType().getName(),connectionType.getName()));
  }
}
