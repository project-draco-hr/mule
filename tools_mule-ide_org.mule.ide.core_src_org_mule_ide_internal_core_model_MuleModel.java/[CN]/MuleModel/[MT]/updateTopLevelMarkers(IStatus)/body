{
  MuleCorePlugin.getDefault().clearMarkers(getProject());
  if (status.isMultiStatus()) {
    MultiStatus multi=(MultiStatus)status;
    IStatus[] children=multi.getChildren();
    for (int i=0; i < children.length; i++) {
      MuleCorePlugin.getDefault().createMarker(getProject(),IMarker.SEVERITY_ERROR,children[i].getMessage());
    }
  }
 else {
    MuleCorePlugin.getDefault().createMarker(getProject(),IMarker.SEVERITY_ERROR,status.getMessage());
  }
}
