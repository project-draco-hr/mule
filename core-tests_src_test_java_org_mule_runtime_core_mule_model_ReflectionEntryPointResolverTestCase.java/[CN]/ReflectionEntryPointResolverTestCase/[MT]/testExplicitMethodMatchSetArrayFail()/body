{
  ReflectionEntryPointResolver resolver=new ReflectionEntryPointResolver();
  InvocationResult result=resolver.invoke(new FruitBowl(),MuleTestUtils.getTestEventContext(new Fruit[]{new Apple(),new Orange()},REQUEST_RESPONSE,muleContext));
  assertEquals("Test should have failed because the arguments were not wrapped properly: ",result.getState(),InvocationResult.State.FAILED);
}
