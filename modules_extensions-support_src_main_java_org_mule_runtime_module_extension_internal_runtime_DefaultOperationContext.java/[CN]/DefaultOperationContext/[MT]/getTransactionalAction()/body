{
  OperationTransactionalAction action=getTypeSafeParameter(TRANSACTIONAL_ACTION_PARAMETER_NAME,OperationTransactionalAction.class);
  if (action == null) {
    throw new IllegalArgumentException(format("Operation '%s' from extension '%s' is transactional but no transactional action defined",operationModel.getName(),configuration.getModel().getExtensionModel().getName()));
  }
  return action;
}
