{
  UMOEndpoint endpoint=(UMOEndpoint)recipientCache.get(recipient);
  if (endpoint != null) {
    return endpoint;
  }
  try {
    UMOEndpointURI endpointUri=new MuleEndpointURI(recipient);
    endpoint=getManagementContext().getRegistry().getOrCreateEndpointForUri(endpointUri,UMOEndpoint.ENDPOINT_TYPE_SENDER);
    endpoint.initialise();
  }
 catch (  UMOException e) {
    throw new RoutingException(message,endpoint,e);
  }
  UMOEndpoint existingEndpoint=(UMOEndpoint)recipientCache.putIfAbsent(recipient,endpoint);
  if (existingEndpoint != null) {
    endpoint=existingEndpoint;
  }
  return endpoint;
}
