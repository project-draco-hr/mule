{
  Method method=null;
  String opName=(String)event.getMessage().getProperty(CxfConstants.OPERATION);
  if (opName != null) {
    method=getMethodFromOperation(opName);
  }
  if (method == null) {
    opName=operation;
    if (opName != null) {
      method=getMethodFromOperation(opName);
    }
  }
  if (method == null) {
    throw new MessagingException(CxfMessages.noOperationWasFoundOrSpecified(),event);
  }
  return method;
}
