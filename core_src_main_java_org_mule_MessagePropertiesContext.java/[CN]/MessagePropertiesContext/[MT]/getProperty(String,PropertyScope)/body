{
  if (scope == null) {
    scope=PropertyScope.OUTBOUND;
  }
  T value=null;
  if (PropertyScope.SESSION.equals(scope)) {
    if (RequestContext.getEvent() != null) {
      value=(T)RequestContext.getEvent().getSession().getProperty(key);
    }
  }
 else {
    value=(T)scopedMap.get(scope).get(key);
  }
  return value;
}
