{
  Method[] methods=clazz.getMethods();
  for (int i=0; i < methods.length; i++) {
    if (methods[i].getName().equals(name)) {
      if (parameterTypes == null) {
        return methods[i];
      }
 else       if (Arrays.equals(methods[i].getParameterTypes(),parameterTypes)) {
        return methods[i];
      }
    }
  }
  return null;
}
