{
  if (endpoint == null) {
    super.setEndpoint(endpoint);
  }
 else   if (endpoint.getConnector() instanceof MailConnector || endpoint.getConnector() instanceof SmtpConnector || endpoint.getConnector() instanceof Pop3Connector) {
    super.setEndpoint(endpoint);
  }
 else {
    throw new IllegalArgumentException("The endpoint connector for an Email transfromer must be of type: " + MailConnector.class.getName() + " or "+ SmtpConnector.class.getName()+ " or "+ Pop3Connector.class.getName()+ " not "+ (endpoint.getConnector() == null ? "null" : endpoint.getConnector().getClass().getName()));
  }
}
