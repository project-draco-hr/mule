{
  try {
    workManagerSource.getWorkManager().scheduleWork(new AsyncMessageProcessorWorker(DefaultMuleEvent.copy(event)),WorkManager.INDEFINITE,null,new AsyncWorkListener(next));
    fireAsyncScheduledNotification(event);
  }
 catch (  Exception e) {
    new MessagingException(CoreMessages.errorSchedulingMessageProcessorForAsyncInvocation(next),event,e,this);
  }
}
