{
  final MuleClient client=muleContext.getClient();
  final boolean[] results=new boolean[]{false};
  Thread t=new Thread(){
    @Override public void run(){
      try {
        InternalMessage muleMessage=InternalMessage.builder().payload(TEST_MESSAGE).build();
        Error error=client.send(url,muleMessage,HttpRequestOptionsBuilder.newOptions().disableStatusCodeValidation().method(POST.name()).build()).getLeft();
        results[0]=error.getException() instanceof DispatchException;
      }
 catch (      Exception e) {
      }
    }
  }
;
  t.start();
  waitLatch.await();
  muleContext.stop();
  t.join();
  assertTrue("Was able to process message ",results[0]);
}
