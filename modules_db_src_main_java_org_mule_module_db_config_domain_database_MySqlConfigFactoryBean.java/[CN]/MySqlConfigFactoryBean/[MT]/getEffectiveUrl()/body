{
  String url=getUrl();
  if (StringUtils.isEmpty(url)) {
    StringBuilder buf=new StringBuilder(128);
    buf.append(getUrlPrefix());
    buf.append(getHost());
    if (getPort() > 0) {
      buf.append(":");
      buf.append(getPort());
    }
    buf.append("/");
    buf.append(getDatabase());
    url=buf.toString();
  }
  return addProperties(url);
}
