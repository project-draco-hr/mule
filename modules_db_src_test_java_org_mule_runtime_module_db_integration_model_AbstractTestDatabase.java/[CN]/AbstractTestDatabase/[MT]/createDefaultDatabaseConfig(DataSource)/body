{
  Connection connection=dataSource.getConnection();
  try {
    connection.setAutoCommit(false);
    createPlanetTestTable(connection);
    if (supportsXmlType()) {
      createAlienTestTable(connection);
    }
    connection.commit();
  }
  finally {
    if (connection != null) {
      connection.close();
    }
  }
}
