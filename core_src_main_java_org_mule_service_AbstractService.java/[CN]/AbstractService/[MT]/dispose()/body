{
  try {
    if (!stopped.get()) {
      stop();
    }
  }
 catch (  MuleException e) {
    logger.error("Failed to stop service: " + name,e);
  }
  doDispose();
  component.dispose();
  initialised.set(false);
  fireServiceNotification(ServiceNotification.SERVICE_DISPOSED);
  muleContext.getStatistics().remove(stats);
}
