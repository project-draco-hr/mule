{
  if (xslFile == null)   throw new TransformerException("Failed to initialize XsltTransformer : xslFile property is not set ");
  File file=new File(xslFile);
  StreamSource source;
  if (file.exists())   source=new StreamSource(file);
 else {
    InputStream stream=getClass().getClassLoader().getResourceAsStream(xslFile);
    if (stream != null)     source=new StreamSource(stream);
 else     throw new TransformerException("Failed to initialize XsltTransformer : xslFile (" + getXslFile() + ") cannot be found ");
  }
  return source;
}
