{
  int noOfMessages=1;
  boolean queue=false;
  if (args.length == 5) {
    if (args[2].equals("-q"))     queue=true;
    noOfMessages=Integer.parseInt(args[3]);
    boolean isBlock=Boolean.valueOf(args[4]).booleanValue();
    JmsReader Jms=new JmsReader(args[0],queue);
    Jms.read(args[1],noOfMessages,isBlock);
  }
 else {
    usage();
  }
}
