{
  boolean portIsFree=true;
  ServerSocket server=null;
  try {
    server=new ServerSocket(port);
  }
 catch (  IOException e) {
    portIsFree=false;
  }
 finally {
    if (server != null) {
      try {
        server.close();
      }
 catch (      IOException e) {
      }
    }
  }
  return portIsFree;
}
