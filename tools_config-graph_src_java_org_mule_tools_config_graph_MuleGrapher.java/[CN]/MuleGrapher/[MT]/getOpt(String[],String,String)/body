{
  for (int i=0; i < args.length; i++) {
    if (args[i].equals(name)) {
      if (i + 1 >= args.length) {
        return defaultValue;
      }
 else {
        String arg=args[i + 1];
        if (arg.startsWith("-")) {
          return defaultValue;
        }
 else {
          return arg;
        }
      }
    }
  }
  return defaultValue;
}
