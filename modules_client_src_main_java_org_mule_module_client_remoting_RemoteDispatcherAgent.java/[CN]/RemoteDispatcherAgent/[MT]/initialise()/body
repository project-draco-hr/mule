{
  if (endpoint == null) {
    throw new IllegalArgumentException(CoreMessages.objectIsNull("remote-endpoint").getMessage());
  }
  if (wireFormat == null) {
    wireFormat=new SerializedMuleMessageWireFormat();
  }
  muleContext.getNotificationManager().addInterfaceToType(RemoteDispatcherNotificationListener.class,RemoteDispatcherNotification.class);
  try {
    if (muleContext.getRegistry().lookupService(RemoteDispatcherComponent.MANAGER_COMPONENT_NAME) != null) {
      logger.info("Mule manager component has already been initialised, ignoring server url");
    }
 else {
      Service component=RemoteDispatcherComponent.getSerivce(endpoint,wireFormat,muleContext.getConfiguration().getDefaultEncoding(),muleContext.getConfiguration().getDefaultResponseTimeout(),muleContext);
      muleContext.getRegistry().registerService(component);
    }
  }
 catch (  MuleException e) {
    throw new InitialisationException(e,this);
  }
}
