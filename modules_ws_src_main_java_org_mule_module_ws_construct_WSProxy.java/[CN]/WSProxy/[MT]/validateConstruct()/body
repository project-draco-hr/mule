{
  super.validateConstruct();
  if ((messageSource instanceof InboundEndpoint) && (!((InboundEndpoint)messageSource).getExchangePattern().equals(MessageExchangePattern.REQUEST_RESPONSE))) {
    throw new FlowConstructInvalidException(MessageFactory.createStaticMessage("WSProxy only works with a request-response inbound endpoint."));
  }
  if (!outboundEndpoint.getExchangePattern().equals(MessageExchangePattern.REQUEST_RESPONSE)) {
    throw new FlowConstructInvalidException(MessageFactory.createStaticMessage("WSProxy only works with a request-response outbound endpoint."));
  }
}
