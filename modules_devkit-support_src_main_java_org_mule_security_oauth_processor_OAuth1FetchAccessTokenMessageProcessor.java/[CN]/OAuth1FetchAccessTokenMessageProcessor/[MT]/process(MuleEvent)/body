{
  try {
    this.adapter.setOauthVerifier(((String)event.getMessage().getInvocationProperty("_oauthVerifier")));
    this.adapter.fetchAccessToken(requestTokenUrl,this.getAccessTokenUrl(),authorizationUrl,this.getRedirectUri());
  }
 catch (  Exception e) {
    throw new MessagingException(MessageFactory.createStaticMessage("Unable to fetch access token"),event,e);
  }
  return event;
}
