{
  if (getLibLocationChoice() == LOAD_FROM_PLUGIN) {
    preferences.setValue(IPreferenceConstants.MULE_CLASSPATH_TYPE,IPreferenceConstants.MULE_CLASSPATH_TYPE_PLUGIN);
  }
 else {
    preferences.setValue(IPreferenceConstants.MULE_CLASSPATH_TYPE,IPreferenceConstants.MULE_CLASSPATH_TYPE_EXTERNAL);
  }
  preferences.setValue(IPreferenceConstants.EXTERNAL_MULE_ROOT,getExternalRoot());
}
