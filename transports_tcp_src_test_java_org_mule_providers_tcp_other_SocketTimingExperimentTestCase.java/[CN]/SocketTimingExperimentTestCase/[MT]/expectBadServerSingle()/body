{
  ServerSocket server=new ServerSocket();
  Socket client=null;
  try {
    server.bind(new InetSocketAddress(LOCALHOST,SERVER_PORT));
    client=new Socket(LOCALHOST,SERVER_PORT);
    Socket out=server.accept();
    badSend(out);
    return client.getInputStream().read() > -1;
  }
  finally {
    if (null != client) {
      client.close();
    }
    server.close();
  }
}
