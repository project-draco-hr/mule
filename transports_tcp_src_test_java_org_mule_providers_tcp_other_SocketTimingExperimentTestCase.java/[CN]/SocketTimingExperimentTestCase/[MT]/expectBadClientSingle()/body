{
  ServerSocket server=new ServerSocket();
  Socket in=null;
  try {
    server.bind(new InetSocketAddress(LOCALHOST,SERVER_PORT));
    Socket client=new Socket(LOCALHOST,SERVER_PORT);
    in=server.accept();
    badSend(client);
    return in.getInputStream().read() > -1;
  }
  finally {
    if (null != in) {
      in.close();
    }
    server.close();
  }
}
