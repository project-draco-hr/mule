{
  if (!StringUtils.isEmpty(this.updateExpression)) {
    try {
      this.muleContext.getExpressionManager().validate(this.updateExpression);
    }
 catch (    InvalidExpressionException e) {
      throw new InitialisationException(I18nMessageFactory.createStaticMessage(String.format("update-expression requires a valid MEL expression. '%s' was found instead",this.updateExpression)),e,this);
    }
  }
}
