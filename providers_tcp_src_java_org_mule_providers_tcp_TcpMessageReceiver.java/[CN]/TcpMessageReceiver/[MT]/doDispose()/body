{
  if (worker != null) {
    worker.interrupt();
    worker=null;
  }
  try {
    threadPool.shutdownNow();
    if (serverSocket != null && !serverSocket.isClosed())     serverSocket.close();
    serverSocket=null;
  }
 catch (  Exception e) {
    throw new DisposeException("Failed to close http port: " + e.getMessage(),e);
  }
  logger.info("Closed Tcp port");
}
