{
  closed.set(true);
  try {
    if (socket != null && !socket.isClosed()) {
      logger.debug("Closing listener: " + socket.getLocalSocketAddress().toString());
      socket.shutdownInput();
      socket.shutdownOutput();
      socket.close();
    }
  }
 catch (  IOException e) {
    logger.error("Socket close failed with: " + e);
  }
}
