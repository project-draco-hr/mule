{
  String[] pairs=Utility.split(properties,",");
  propertiesMap=new Properties();
  for (int i=0; i < pairs.length; i++) {
    String pair=pairs[i];
    int x=pair.indexOf("=");
    if (x == -1) {
      propertiesMap.setProperty(pair,null);
    }
 else {
      propertiesMap.setProperty(pair.substring(0,x),pair.substring(x + 1));
    }
  }
}
