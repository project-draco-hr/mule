{
  Map map=new HashMap();
  map.put("brand","Juicy!");
  map.put("radius","2.32");
  map.put("segments","22");
  map.put("trombones","3");
  Orange o=new Orange();
  try {
    BeanUtils.populate(new Orange(),map);
    fail("Trombones is not a valid property");
  }
 catch (  IllegalArgumentException e) {
    assertTrue(e.getMessage().indexOf("trombone") > -1);
  }
}
