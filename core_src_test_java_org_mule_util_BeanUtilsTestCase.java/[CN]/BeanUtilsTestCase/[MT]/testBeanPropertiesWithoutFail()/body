{
  Map map=new HashMap();
  map.put("brand","Juicy!");
  map.put("radius","2.32");
  map.put("segments","22");
  map.put("trombones","3");
  Orange o=new Orange();
  BeanUtils.populateWithoutFail(o,map,true);
  assertNotNull(o);
  assertEquals("Juicy!",o.getBrand());
  assertEquals(new Double(2.32),o.getRadius());
  assertEquals(new Integer(22),o.getSegments());
}
