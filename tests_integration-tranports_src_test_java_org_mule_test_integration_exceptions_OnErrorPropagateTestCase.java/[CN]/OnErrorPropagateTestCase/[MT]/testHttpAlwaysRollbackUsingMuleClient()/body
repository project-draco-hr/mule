{
  MuleClient client=muleContext.getClient();
  MuleMessage response=client.send(String.format("http://localhost:%s",dynamicPort1.getNumber()),getTestMuleMessage(JSON_REQUEST),newOptions().disableStatusCodeValidation().responseTimeout(TIMEOUT).build()).getRight();
