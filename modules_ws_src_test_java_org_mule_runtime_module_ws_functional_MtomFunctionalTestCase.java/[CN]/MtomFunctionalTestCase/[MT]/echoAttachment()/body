{
  String request="<ns:echoAttachment xmlns:ns=\"http://consumer.ws.module.runtime.mule.org/\"><attachment>" + "<xop:Include xmlns:xop=\"http://www.w3.org/2004/08/xop/include\" href=\"cid:testAttachmentId\"/>" + "</attachment></ns:echoAttachment>";
  MuleEvent event=flowRunner("clientEchoAttachment").withPayload(request).withOutboundAttachment("testAttachmentId",buildDataHandler(TEST_FILE_ATTACHMENT)).run();
  assertAttachmentInResponse(event.getMessage(),TEST_FILE_ATTACHMENT);
}
