{
  setStatus(Status.OK_STATUS);
  IFile configFile=parent.getProject().getFile(relativePath);
  setFilePath(configFile.getFullPath());
  if (!configFile.exists()) {
    setResource(null);
    setStatus(MuleCorePlugin.getDefault().createErrorStatus(ERROR_CONFIG_NOT_FOUND + relativePath,null));
  }
 else {
    try {
      if (getResource() == null) {
        URI uri=URI.createFileURI(parent.getProject().getLocation().toString() + IPath.SEPARATOR + relativePath);
        setResource((new SchemaResourceFactoryImpl()).createResource(uri));
      }
      getResource().load(Collections.EMPTY_MAP);
    }
 catch (    Exception e) {
      setStatus(MuleCorePlugin.getDefault().createErrorStatus(ERROR_LOADING_CONFIG + relativePath,e));
    }
  }
  return getStatus();
}
