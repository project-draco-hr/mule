{
  String config="<jdbc:connector name=\"jdbcConnector\" pollingFrequency=\"1000\" dataSource-ref=\"hsqlDatasource\" queryTimeout=\"3000\" xmlns:jdbc=\"http://www.mulesoft.org/schema/mule/jdbc\"/>";
  Document document=XMLUnit.buildControlDocument(config);
  String refDef="<spring:bean xmlns:spring=\"http://www.springframework.org/schema/beans\" class=\"org.apache.commons.dbcp.BasicDataSource\" destroy-method=\"close\" id=\"hsqlDatasource\">" + "<spring:property name=\"driverClassName\" value=\"org.hsqldb.jdbcDriver\"/>" + "<spring:property name=\"url\" value=\"jdbc:hsqldb:mem:spring-playground\"/>"+ "<spring:property name=\"username\" value=\"sa\"/>"+ "<spring:property name=\"password\" value=\"\"/>"+ "</spring:bean>";
  XmlConfigurationCallback callback=new DatabaseConfigurationCallback(Collections.singletonMap("hsqlDatasource",refDef));
  doTest(document,callback,true);
  doTest(document,callback,true);
  doTest(document,callback,true);
}
