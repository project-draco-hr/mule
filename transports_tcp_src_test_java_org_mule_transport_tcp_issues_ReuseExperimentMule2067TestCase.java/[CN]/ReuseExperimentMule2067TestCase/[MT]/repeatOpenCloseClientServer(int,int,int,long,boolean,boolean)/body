{
  String message="Repeating openCloseClientServer with pauses of " + pause + " ms "+ (reuse ? "with" : "without")+ " reuse";
  if (noFail) {
    logger.debug(message);
  }
 else {
    logger.info(message);
  }
  for (int i=0; i < numberOfRepeats; i++) {
    if (0 != i) {
      pause(pause);
    }
    try {
      openCloseClientServer(numberOfConnections,port,reuse);
    }
 catch (    BindException e) {
      if (noFail && e.getMessage().indexOf("Address already in use") > -1) {
        return i;
      }
      throw e;
    }
  }
  return numberOfRepeats;
}
