{
  EventCallback callback=new EventCallback(){
    public void eventReceived(    UMOEventContext context,    Object component){
synchronized (callbackLock) {
        callbackCalled=true;
        callbackCount++;
      }
      if (!transacted) {
        assertNull(context.getCurrentTransaction());
      }
 else {
