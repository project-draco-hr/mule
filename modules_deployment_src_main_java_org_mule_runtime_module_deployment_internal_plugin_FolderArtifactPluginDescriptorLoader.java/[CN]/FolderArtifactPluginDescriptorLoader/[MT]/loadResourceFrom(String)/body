{
  Optional<InputStream> inputStream;
  final File file=new File(pluginLocation,resource);
  if (file.exists()) {
    try {
      inputStream=of(new FileInputStream(file));
    }
 catch (    FileNotFoundException e) {
      throw new ArtifactDescriptorCreateException(format("Cannot read resource '%s' from file '%s'",resource,pluginLocation.getAbsolutePath()),e);
    }
  }
 else {
    inputStream=empty();
  }
  return inputStream;
}
