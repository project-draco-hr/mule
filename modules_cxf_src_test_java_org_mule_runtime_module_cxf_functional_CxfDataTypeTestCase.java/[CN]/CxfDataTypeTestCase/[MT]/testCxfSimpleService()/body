{
  MuleClient client=muleContext.getClient();
  InputStream xml=getClass().getResourceAsStream("/direct/direct-request.xml");
  MuleMessage result=client.send("http://localhost:" + dynamicPort.getNumber() + "/echo",MuleMessage.builder().payload(xml).mediaType(APP_SOAP_XML).build(),newOptions().method(POST.name()).disableStatusCodeValidation().build());
  Assert.assertThat(getPayloadAsString(result),not(containsString("Fault")));
}
