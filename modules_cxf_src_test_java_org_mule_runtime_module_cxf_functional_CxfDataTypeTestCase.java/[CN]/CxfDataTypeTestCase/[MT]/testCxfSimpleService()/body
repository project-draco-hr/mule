{
  MuleClient client=muleContext.getClient();
  InputStream xml=getClass().getResourceAsStream("/direct/direct-request.xml");
  InternalMessage result=client.send("http://localhost:" + dynamicPort.getNumber() + "/echo",InternalMessage.builder().payload(xml).mediaType(APP_SOAP_XML).build(),newOptions().method(POST.name()).disableStatusCodeValidation().build()).getRight();
  Assert.assertThat(getPayloadAsString(result),not(containsString("Fault")));
}
