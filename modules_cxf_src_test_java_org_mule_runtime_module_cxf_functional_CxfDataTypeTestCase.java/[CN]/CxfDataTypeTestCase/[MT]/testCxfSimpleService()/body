{
  MuleClient client=muleContext.getClient();
  Map<String,Serializable> props=new HashMap<>();
  props.put("Content-Type","application/soap+xml");
  InputStream xml=getClass().getResourceAsStream("/direct/direct-request.xml");
  MuleMessage result=client.send("http://localhost:" + dynamicPort.getNumber() + "/echo",MuleMessage.builder().payload(xml).inboundProperties(props).build(),newOptions().method(POST.name()).disableStatusCodeValidation().build());
  Assert.assertThat(getPayloadAsString(result),not(containsString("Fault")));
}
