{
  MuleMessage request=MuleMessage.builder().payload(requestPayload).build();
  MuleMessage received=muleContext.getClient().send("http://localhost:" + dynamicPort.getNumber() + "/hello",request,newOptions().method(POST.name()).disableStatusCodeValidation().build()).getRight();
  Assert.assertThat(getPayloadAsString(received),not(containsString("Fault")));
}
