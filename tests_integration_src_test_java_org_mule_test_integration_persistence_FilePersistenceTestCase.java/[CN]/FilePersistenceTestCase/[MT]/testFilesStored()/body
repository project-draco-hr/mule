{
  String path=RegistryContext.getConfiguration().getWorkingDirectory() + "/queuestore/test.queue";
  File store=FileUtils.newFile(path);
  assertFalse(store.exists());
  MuleClient client=new MuleClient();
  client.send("vm://test.queue","test",null);
  File[] files=store.listFiles();
  assertNotNull(files);
  assertEquals(1,files.length);
  managementContext.getRegistry().lookupComponent("TestComponent").start();
  Thread.sleep(2000);
  files=store.listFiles();
  assertNotNull(files);
  assertEquals(0,files.length);
}
