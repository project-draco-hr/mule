{
  MuleClient client=new MuleClient(muleContext);
  MuleMessage result=client.send("axis:http://localhost:63381/services/AxisService?method=throwsException",new DefaultMuleMessage("test",muleContext));
  assertNotNull(result);
  assertNotNull("should have thrown exception",result.getExceptionPayload());
  Throwable t=result.getExceptionPayload().getException().getCause();
  assertNotNull(t);
  assertEquals(TestComponentException.class.getName() + ": " + TestComponentException.MESSAGE_PREFIX+ TestComponent.EXCEPTION_MESSAGE,t.getMessage());
}
