{
  if (event != null) {
    FlowConstruct fc=event.getFlowConstruct();
    if (fc != null) {
      FlowConstructStatistics stats=fc.getStatistics();
      if (stats != null && fc.getStatistics().isEnabled()) {
        return new ProcessingTime(stats,event.getMuleContext());
      }
    }
  }
  return null;
}
