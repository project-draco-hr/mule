{
  MuleClient client=muleContext.getClient();
  MuleMessage message=client.send("vm://invalid",getTestMuleMessage(NullPayload.getInstance()));
  assertNotNull(message);
  assertNotNull(message.getExceptionPayload());
  assertEquals(IllegalArgumentException.class,ExceptionUtils.getRootCause(message.getExceptionPayload().getException()).getClass());
}
