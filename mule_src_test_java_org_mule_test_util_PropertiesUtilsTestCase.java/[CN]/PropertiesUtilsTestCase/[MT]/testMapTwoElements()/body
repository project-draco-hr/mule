{
  Map props=CollectionUtils.mapWithKeysAndValues(HashMap.class,new Object[]{"foo","foozle"},new Object[]{"bar","doozle"});
  assertEquals("{foo=bar, foozle=doozle}",PropertiesUtils.propertiesToString(props,false));
  assertEquals("{" + SystemUtils.LINE_SEPARATOR + "foo=bar"+ SystemUtils.LINE_SEPARATOR+ "foozle=doozle"+ SystemUtils.LINE_SEPARATOR+ "}",PropertiesUtils.propertiesToString(props,true));
}
