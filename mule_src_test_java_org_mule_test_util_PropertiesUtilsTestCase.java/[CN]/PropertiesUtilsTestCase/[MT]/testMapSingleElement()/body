{
  Map props=CollectionUtils.mapWithKeysAndValues(HashMap.class,new Object[]{"foo"},new Object[]{"bar"});
  assertEquals("{foo=bar}",PropertiesUtils.propertiesToString(props,false));
  assertEquals("{" + SystemUtils.LINE_SEPARATOR + "foo=bar"+ SystemUtils.LINE_SEPARATOR+ "}",PropertiesUtils.propertiesToString(props,true));
}
