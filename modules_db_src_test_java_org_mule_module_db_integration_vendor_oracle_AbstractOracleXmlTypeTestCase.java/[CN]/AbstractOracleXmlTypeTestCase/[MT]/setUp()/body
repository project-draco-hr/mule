{
  assumeThat(this,new TypeSafeMatcher<AbstractOracleXmlTypeTestCase>(){
    @Override public boolean matchesSafely(    AbstractOracleXmlTypeTestCase item){
      try {
        OracleXmlType.getXmlTypeClass();
