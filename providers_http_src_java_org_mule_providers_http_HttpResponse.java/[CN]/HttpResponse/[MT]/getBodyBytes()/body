{
  InputStream in=getBody();
  if (in != null) {
    byte[] tmp=new byte[4096];
    int bytesRead=0;
    ByteArrayOutputStream buffer=new ByteArrayOutputStream(1024);
    while ((bytesRead=in.read(tmp)) != -1) {
      buffer.write(tmp,0,bytesRead);
    }
    return buffer.toByteArray();
  }
 else {
    return null;
  }
}
