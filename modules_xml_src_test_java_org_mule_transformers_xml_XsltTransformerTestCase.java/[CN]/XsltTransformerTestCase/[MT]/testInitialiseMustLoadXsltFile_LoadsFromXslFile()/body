{
  XsltTransformer xsltTransformer=new XsltTransformer();
  String someExistentFileName="cdcatalog.xsl";
  xsltTransformer.setXslFile(someExistentFileName);
  try {
    xsltTransformer.initialise();
    assertNotNull(xsltTransformer.getXslt());
    String someTextThatIsInTheXslFile="My CD Collection";
    assertTrue("Should contain the text '" + someTextThatIsInTheXslFile + "', because it is in the '"+ someExistentFileName+ "' file that we are setting.",xsltTransformer.getXslt().contains(someTextThatIsInTheXslFile));
  }
 catch (  InitialisationException e) {
    fail("Should NOT have thrown an exception because file '" + someExistentFileName + "' DOES exist.");
  }
}
