{
  classpathType=new RadioGroupFieldEditor(IPreferenceConstants.MULE_CLASSPATH_TYPE,"Choose where Eclipse will look for Mule libraries:",1,new String[][]{{"Mule plugin (jars included with Mini-Mule distribution)",IPreferenceConstants.MULE_CLASSPATH_TYPE_PLUGIN},{"External location specified below",IPreferenceConstants.MULE_CLASSPATH_TYPE_EXTERNAL}},getFieldEditorParent(),true);
  addField(classpathType);
  externalMuleRoot=new DirectoryFieldEditor(IPreferenceConstants.EXTERNAL_MULE_ROOT,"&Mule installation folder:",getFieldEditorParent());
  addField(externalMuleRoot);
}
