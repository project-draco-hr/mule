{
  try {
    return extensionManager.getConfigurationProvider(extensionModel);
  }
 catch (  TooManyConfigsException e) {
    throw new IllegalStateException(String.format("No config-ref was specified for component '%s' of extension '%s', but %d are registered. Please specify which to use",componentModel.getName(),extensionModel.getName(),e.getConfigsCount()),e);
  }
}
