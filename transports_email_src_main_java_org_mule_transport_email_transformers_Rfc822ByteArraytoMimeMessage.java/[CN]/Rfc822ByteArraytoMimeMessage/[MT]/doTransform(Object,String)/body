{
  try {
    if (src instanceof byte[]) {
      byte[] bytes=(byte[])src;
      return new MimeMessage(getSession(),new ByteArrayInputStream(bytes));
    }
 else     if (src instanceof InputStream) {
      return new MimeMessage(getSession(),(InputStream)src);
    }
 else {
      throw new TransformerException(CoreMessages.transformOnObjectUnsupportedTypeOfEndpoint(this.getName(),src.getClass(),endpoint));
    }
  }
 catch (  MessagingException e) {
    throw new TransformerException(this,e);
  }
}
