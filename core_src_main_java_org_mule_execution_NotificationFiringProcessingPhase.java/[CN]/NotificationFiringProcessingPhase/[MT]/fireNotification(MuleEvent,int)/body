{
  try {
    if (event == null || VoidMuleEvent.getInstance().equals(event)) {
      event=RequestContext.getEvent();
      if (event == null || VoidMuleEvent.getInstance().equals(event)) {
        return;
      }
    }
    getNotificationHelper(muleContext.getNotificationManager()).fireNotification(event,event.getMessageSourceURI() != null ? event.getMessageSourceURI().toString() : null,event.getFlowConstruct(),action);
  }
 catch (  Exception e) {
    logger.warn("Could not fire notification. Action: " + action,e);
  }
}
