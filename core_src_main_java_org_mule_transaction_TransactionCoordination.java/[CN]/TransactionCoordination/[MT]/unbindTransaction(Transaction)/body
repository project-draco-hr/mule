{
  try {
    Transaction oldTx=(Transaction)transactions.get();
    if (oldTx != null && !oldTx.equals(transaction)) {
      throw new IllegalTransactionStateException(CoreMessages.transactionCannotUnbind());
    }
  }
  finally {
    transactions.set(null);
synchronized (this) {
      if (txCounter > 0) {
        txCounter--;
      }
    }
  }
}
