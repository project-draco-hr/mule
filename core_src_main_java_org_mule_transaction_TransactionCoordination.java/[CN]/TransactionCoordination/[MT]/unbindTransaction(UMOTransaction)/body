{
  try {
    UMOTransaction oldTx=(UMOTransaction)transactions.get();
    if (oldTx != null && !oldTx.equals(transaction)) {
      throw new IllegalTransactionStateException(new Message(Messages.TX_CANT_UNBIND));
    }
  }
  finally {
    transactions.set(null);
synchronized (this) {
      if (txCounter > 0) {
        txCounter--;
      }
    }
  }
}
