{
  for (  Method method : getOperationMethods(actingClass)) {
    OperationDescriptor operation=declaration.withOperation(method.getName()).executorsCreatedBy(new ReflectiveOperationExecutorFactory<>(actingClass,method,delegateFactory));
    declareOperationParameters(method,operation);
    calculateImplementedTypes(actingClass,method,operation);
  }
}
