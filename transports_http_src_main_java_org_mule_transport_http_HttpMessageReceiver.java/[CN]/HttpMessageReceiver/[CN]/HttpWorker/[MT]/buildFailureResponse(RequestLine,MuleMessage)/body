{
  EndpointURI uri=endpoint.getEndpointURI();
  String failedPath=String.format("%s://%s:%d%s",uri.getScheme(),uri.getHost(),uri.getPort(),message.getInboundProperty(HttpConnector.HTTP_REQUEST_PATH_PROPERTY));
  if (logger.isDebugEnabled()) {
    logger.debug("Failed to bind to " + failedPath);
  }
  HttpResponse response=new HttpResponse();
  response.setStatusLine(requestLine.getHttpVersion(),HttpConstants.SC_NOT_FOUND);
  response.setBody(HttpMessages.cannotBindToAddress(failedPath).toString());
  DefaultMuleEvent event=new DefaultMuleEvent(new DefaultMuleMessage(response,connector.getMuleContext()),endpoint,new DefaultMuleSession(flowConstruct,connector.getMuleContext()));
  RequestContext.setEvent(event);
  return transformResponse(response,event);
}
