{
  EndpointURI uri=endpoint.getEndpointURI();
  String failedPath=uri.getScheme() + "://" + uri.getHost()+ ":"+ uri.getPort()+ message.getProperty(HttpConnector.HTTP_REQUEST_PATH_PROPERTY);
  if (logger.isDebugEnabled()) {
    logger.debug("Failed to bind to " + failedPath);
  }
  HttpResponse response=new HttpResponse();
  response.setStatusLine(requestLine.getHttpVersion(),HttpConstants.SC_NOT_FOUND);
  response.setBody(HttpMessages.cannotBindToAddress(failedPath).toString());
  RequestContext.setEvent(new DefaultMuleEvent(new DefaultMuleMessage(response),endpoint,new DefaultMuleSession(service,connector.getMuleContext()),true));
  return transformResponse(response);
}
