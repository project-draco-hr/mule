{
  boolean fallback=component instanceof Callable;
  if (method != null) {
    try {
      component.getClass().getMethod(method.getName(),method.getParameterTypes());
    }
 catch (    NoSuchMethodException e) {
      if (!fallback) {
        throw e;
      }
    }
  }
 else {
    if (!fallback) {
      throw new NoSuchMethodException(CoreMessages.methodWithParamsNotFoundOnObject(method.getName(),"unknown",component.getClass()).toString());
    }
  }
}
