{
  String method=event.getMessage().getInvocationProperty(CxfConstants.OPERATION);
  if (method == null) {
    method=event.getMessage().getInvocationProperty(MuleProperties.MULE_METHOD_PROPERTY);
  }
  if (method == null) {
    method=defaultMethodName;
  }
  if (method == null && proxy) {
    return "invoke";
  }
  if (method == null) {
    throw new DispatchException(SoapMessages.cannotInvokeCallWithoutOperation(),event.getMessage(),event.getEndpoint());
  }
  return method;
}
