{
  Event response=exception.getEvent();
  InternalMessage message=response.getMessage();
  httpStatus=message.getOutboundProperty(HTTP_STATUS_PROPERTY) != null ? Integer.valueOf(response.getMessage().getOutboundProperty(HTTP_STATUS_PROPERTY).toString()) : httpStatus;
  message=InternalMessage.builder(response.getMessage()).payload(exception.getMessage()).addOutboundProperty(HTTP_STATUS_PROPERTY,httpStatus).build();
  HttpResponse httpResponse=transformResponse(message);
  httpServerConnection.writeResponse(httpResponse,getThrottlingHeaders());
}
